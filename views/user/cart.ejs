<%- include('./userPartials/navbar') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<style>
  body { background:#fafafa; }

  .promo-card {
    background:#000;
    color:#fff;
    border-radius:14px;
    padding:20px;
    font-size:14px;
  }

  .account-menu a {
    display:flex;
    justify-content:space-between;
    align-items:center;
    padding:14px 16px;
    border-radius:10px;
    text-decoration:none;
    color:#111;
    margin-bottom:6px;
    font-size:15px;
    background:#fff;
    border:1px solid #eaeaea;
  }

  .account-menu a.active {
    background:#f1faf4;
    color:#198754;
    font-weight:600;
  }

  .cart-disabled {
  opacity: .55;
}

  .cart-disabled .disable-interaction {
    pointer-events: none;
  }


  .cart-badge {
    position:absolute;
    top:10px;
    left:10px;
    background:#dc3545;
    color:#fff;
    font-size:12px;
    padding:4px 8px;
    border-radius:6px;
    font-weight:600;
  }

  .cart-card {
    background:#fff;
    border-radius:12px;
    padding:16px;
    margin-bottom:16px;
    display:flex;
    gap:16px;
  }

  .cart-card img {
    width:90px;
    aspect-ratio:5/7;
    object-fit:cover;
    border-radius:6px;
  }

  .qty-btn {
    width:28px;
    height:28px;
    border:1px solid #ddd;
    background:#fff;
    border-radius:4px;
    cursor:pointer;
    font-weight:600;
  }

  .qty-btn:disabled {
    opacity:.5;
    cursor:not-allowed;
  }

  .summary-box {
    background:#fff;
    border-radius:12px;
    padding:20px;
    position:sticky;
    top:20px;
  }

  .summary-item {
    font-size:14px;
    margin-bottom:8px;
  }

  .related-card img {
    aspect-ratio:5/7;
    object-fit:cover;
  }
</style>

<div class="container py-4">
  <div class="row">

    <!-- SIDEBAR -->
    <div class="col-lg-3 col-md-4">
      <div class="promo-card mb-4">
        <div class="fw-semibold">Fast & Secure Checkout</div>
        <div class="small mt-2">Apply coupons at checkout</div>
      </div>

      <div class="account-menu">
        <a href="/user/cart" class="active">
          <span><i class="bi bi-cart me-2"></i>Cart</span>
          <i class="bi bi-chevron-right"></i>
        </a>
        <a href="/user/wishlist">
          <span><i class="bi bi-heart me-2"></i>Wishlist</span>
          <i class="bi bi-chevron-right"></i>
        </a>
      </div>
    </div>

    <!-- CART -->
    <div class="col-lg-6 col-md-8">
  <h5 class="fw-semibold mb-3">Cart</h5>

  <%
    const hasDisabledProduct = cartItems.some(i => !i.productStatus);
  %>

  <% if (hasDisabledProduct) { %>
    <div class="alert alert-danger text-center fw-semibold">
      One or more products in your cart are currently unavailable.
      Please remove them to proceed to checkout.
    </div>
  <% } %>

  <% if (!cartItems.length) { %>
    <p class="text-muted">Your cart is empty</p>
  <% } %>

  <% cartItems.forEach(item => { %>
    <div class="cart-card position-relative <%= !item.productStatus ? 'cart-disabled' : '' %>"
         data-cart-id="<%= item.cartItemId %>"
         data-price="<%= item.price_snapshot %>"
         data-stock="<%= item.stock %>"
         data-active="<%= item.productStatus %>"
         data-title="<%= item.title %>">

      <% if (!item.productStatus) { %>
        <div class="cart-badge">Unavailable</div>
      <% } %>

          <!-- DISABLED INTERACTION WRAPPER -->
      <div class="<%= !item.productStatus ? 'disable-interaction d-flex gap-3' : 'd-flex gap-3' %>">

        <img src="/uploads/<%= item.image %>">

        <div class="flex-grow-1">
          <h6 class="mb-1" style="max-width:75%;">
            <%= item.title %>
          </h6>

          <div class="small text-muted mb-2">
            Size: <%= item.size %> · Color: <%= item.color %>
          </div>

          <div class="d-flex align-items-center gap-2 mb-2">
            <button class="qty-btn minus"
                    data-delta="-1"
                    <%= !item.productStatus ? 'disabled' : '' %>>−</button>

            <span class="qty"><%= item.quantity %></span>

            <button class="qty-btn plus"
                    data-delta="1"
                    <%= !item.productStatus ? 'disabled' : '' %>>+</button>
          </div>

          <div class="small">
            <a href="javascript:void(0)"
              class="me-3 text-decoration-none wishlist-btn <%= !item.productStatus ? 'text-muted' : '' %>"
              data-product-id="<%= item.product_id %>"
              data-variant-id="<%= item.variant_id %>"
              data-cart-item-id="<%= item.cartItemId %>"
              <%= !item.productStatus ? 'aria-disabled="true"' : '' %>>
              <i class="bi bi-heart"></i> Wishlist
            </a>
           <a href="/user/product/<%= item.product_id %>"
              class="text-success text-decoration-none ms-2">
              <i class="bi bi-eye"></i> View Product
            </a>
          </div>
        </div>
      </div>

      <!-- ✅ REMOVE BUTTON (PUT THIS IMMEDIATELY AFTER THE WRAPPER) -->
      <div class="ms-auto align-self-start">
        <a href="javascript:void(0)"
          onclick="removeItem('<%= item.cartItemId %>')"
          class="text-danger text-decoration-none small fw-semibold">
          Remove
        </a>
      </div>

    </div>
  <% }) %>
</div>


    <!-- SUMMARY -->
    <div class="col-lg-3">
      <div class="summary-box">
        <h6 class="fw-semibold">Order Summary</h6>

        <div id="summaryItems" class="mb-3"></div>

        <hr>

        <div class="d-flex justify-content-between mb-2">
          <strong>Total</strong>
          <strong id="grandTotal">₹ 0</strong>
        </div>

        <a href="<%= hasDisabledProduct ? 'javascript:void(0)' : '/user/checkout' %>"
           class="btn btn-dark w-100 <%= hasDisabledProduct ? 'disabled' : '' %>">
          Proceed to Checkout
        </a>
      </div>
    </div>

  </div>

  <!-- RELATED PRODUCTS -->
  <% if (relatedProducts && relatedProducts.length) { %>
    <div class="mt-5">
      <h4 class="fw-semibold mb-4">You may also like</h4>
      <div class="row g-4">
        <% relatedProducts.forEach(p => { %>
          <div class="col-lg-3 col-md-4 col-sm-6">
            <a href="/user/product/<%= p.product_id %>"
               class="text-decoration-none text-dark">
              <div class="card h-100 shadow-sm related-card">
                <img src="/uploads/<%= p.thumbnail %>" class="card-img-top">
                <div class="card-body">
                  <h6><%= p.title %></h6>
                  <span class="fw-semibold text-success">
                    ₹ <%= p.sale_price %>
                  </span>
                  <div class="text-muted small">
                    <%= p.colorsCount %> colors
                  </div>
                </div>
              </div>
            </a>
          </div>
        <% }) %>
      </div>
    </div>
  <% } %>

</div>

<script>
let cartState = [];

document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('.cart-card').forEach(card => {
    if (card.dataset.active !== 'true') return;

    cartState.push({
      id: card.dataset.cartId,
      title: card.dataset.title,
      price: Number(card.dataset.price),
      qty: Number(card.querySelector('.qty').innerText)
    });
  });

  renderSummary();
});

document.addEventListener('click', e => {
  const btn = e.target.closest('.qty-btn');
  if (!btn) return;

  const card = btn.closest('.cart-card');
  if (card.dataset.active !== 'true') return;

  changeQty(card, Number(btn.dataset.delta));
});

async function changeQty(card, delta) {
  const item = cartState.find(i => i.id === card.dataset.cartId);
  if (!item) return;

  const res = await fetch(`/user/cart/item/${item.id}`, {
    method:'PATCH',
    headers:{'Content-Type':'application/json'},
    body:JSON.stringify({ delta })
  });

  const data = await res.json();
  if (!data.success) return alert(data.error);

  item.qty = data.newQty;
  card.querySelector('.qty').innerText = data.newQty;
  renderSummary();
}

function renderSummary() {
  const box = document.getElementById('summaryItems');
  box.innerHTML = '';

  let total = 0;

  cartState.forEach(i => {
    const line = i.price * i.qty;
    total += line;

    box.innerHTML += `
      <div class="summary-item">
        <div class="fw-semibold">${i.title}</div>
        <div class="d-flex justify-content-between">
          <span>₹ ${i.price} × ${i.qty}</span>
          <span>₹ ${line}</span>
        </div>
      </div>
    `;
  });

  document.getElementById('grandTotal').innerText = `₹ ${total}`;
}

async function removeItem(id) {
  await fetch(`/user/cart/item/${id}`, { method:'DELETE' });
  location.reload();
}

async function addToWishlistFromCart(productId, variantId, cartItemId) {
  try {
    const res = await fetch('/user/wishlist/add-from-cart', {
      method: 'POST',
      credentials: 'include',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        product_id: productId,
        variant_id: variantId,
        cartItemId
      })
    });

    const data = await res.json();

    if (!data.success) {
      Swal.fire('Error', data.message || 'Unable to add to wishlist', 'error');
      return;
    }

    Swal.fire({
      icon: 'success',
      title: 'Moved to wishlist ❤️',
      timer: 1200,
      showConfirmButton: false
    }).then(() => location.reload());

  } catch (err) {
    console.error(err);
    Swal.fire('Error', 'Something went wrong', 'error');
  }
}

</script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  const params = new URLSearchParams(window.location.search);
  if (params.get('error')) {
    Swal.fire('Stock issue', params.get('error'), 'warning');
  }
</script>
<script>
document.addEventListener('click', e => {
  const btn = e.target.closest('.wishlist-btn');
  if (!btn) return;

  const productId = btn.dataset.productId;
  const variantId = btn.dataset.variantId;
  const cartItemId = btn.dataset.cartItemId;

  if (!productId || !variantId || !cartItemId) return;

  addToWishlistFromCart(productId, variantId, cartItemId);
});
</script>


