<%- include('./userPartials/navbar') %>

<style>
  body { background:#fafafa; }

  .promo-card {
    background:#000;
    color:#fff;
    border-radius:14px;
    padding:20px;
    font-size:14px;
  }

  .promo-card span { color:#28a745; font-weight:600; }

  .account-menu a {
    display:flex;
    justify-content:space-between;
    align-items:center;
    padding:14px 16px;
    border-radius:10px;
    text-decoration:none;
    color:#111;
    margin-bottom:6px;
    font-size:15px;
    background:#fff;
    border:1px solid #eaeaea;
  }

  .account-menu a.active {
    background:#f1faf4;
    color:#198754;
    font-weight:600;
  }

  .cart-card {
    background:#fff;
    border-radius:12px;
    padding:16px;
    margin-bottom:16px;
    display:flex;
    gap:16px;
  }

  .cart-card img {
    width:90px;
    aspect-ratio:5/7;
    object-fit:cover;
    border-radius:6px;
  }

  .qty-btn {
    width:28px;
    height:28px;
    border:1px solid #ddd;
    background:#fff;
    border-radius:4px;
    cursor:pointer;
    font-weight:600;
  }

  .qty-btn:disabled {
    opacity:.5;
    cursor:not-allowed;
  }

  .summary-box {
    background:#fff;
    border-radius:12px;
    padding:20px;
    position:sticky;
    top:20px;
  }

  .coupon-box {
    display:flex;
    gap:8px;
    margin-bottom:16px;
  }

  .coupon-box input {
    flex:1;
    font-size:14px;
    padding:8px 10px;
    border-radius:6px;
    border:1px solid #ddd;
  }
</style>

<div class="container py-4">
  <div class="row">

    <!-- SIDEBAR -->
    <div class="col-lg-3 col-md-4">
      <div class="promo-card mb-4">
        <div>USE CODE</div>
        <div class="fw-semibold">ATOM10</div>
        <div class="mt-2">& GET UP TO <span>10% OFF</span></div>
      </div>

      <div class="account-menu">
        <a href="/user/cart" class="active">
          <span><i class="bi bi-cart me-2"></i>Cart</span>
          <i class="bi bi-chevron-right"></i>
        </a>
        <a href="/user/wishlist">
          <span><i class="bi bi-heart me-2"></i>Wishlist</span>
          <i class="bi bi-chevron-right"></i>
        </a>
      </div>
    </div>

    <!-- CART ITEMS -->
    <div class="col-lg-6 col-md-8">
      <h5 class="fw-semibold mb-3">Cart</h5>

      <% if (!cartItems.length) { %>
        <p class="text-muted">Your cart is empty</p>
      <% } %>

      <% cartItems.forEach(item => { %>
        <div class="cart-card"
          data-cart-id="<%= item.cartItemId %>"
          data-price="<%= item.price_snapshot %>"
          data-stock="<%= item.stock %>">

          <img src="/uploads/<%= item.image %>">

          <div class="flex-grow-1">
            <h6><%= item.title %></h6>

            <div class="small text-muted mb-2">
              Size: <%= item.size %> · Color: <%= item.color %>
            </div>

            <div class="d-flex align-items-center gap-2 mb-2">
              <button class="qty-btn minus" data-delta="-1">−</button>
              <span class="qty"><%= item.quantity %></span>
              <button class="qty-btn plus" data-delta="1">+</button>
            </div>

            <div class="small">
              <a href="javascript:void(0)"
                 onclick="addToWishlistFromCart('<%= item.cartItemId %>')"
                 class="me-3 text-decoration-none">
                <i class="bi bi-heart"></i> Wishlist
              </a>

              <a href="javascript:void(0)"
                 onclick="removeItem('<%= item.cartItemId %>')"
                 class="text-danger text-decoration-none">
                Remove
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- ORDER SUMMARY -->
    <div class="col-lg-3">
      <div class="summary-box">

        <!-- COUPON -->
        <div class="coupon-box">
          <input id="couponInput" type="text" placeholder="Enter coupon code">
          <button class="btn btn-outline-dark" onclick="applyCoupon()">Apply</button>
        </div>

        <h6 class="fw-semibold">Order Summary</h6>

        <div class="d-flex justify-content-between mb-2">
          <span>Order Subtotal</span>
          <span id="subtotal">₹ 0</span>
        </div>

        <div class="d-flex justify-content-between mb-2">
          <span>Shipping</span>
          <span class="text-success">FREE</span>
        </div>

        <div class="d-flex justify-content-between mb-2">
          <span>Coupon Discount</span>
          <span id="discount">₹ 0</span>
        </div>

        <hr>

        <div class="d-flex justify-content-between mb-3">
          <strong>Total</strong>
          <strong id="grandTotal">₹ 0</strong>
        </div>

        <a href="/user/checkout" class="btn btn-dark w-100">
          Proceed to Checkout
        </a>

      </div>
    </div>

  </div>

  <!-- RELATED PRODUCTS -->
  <div class="mt-5">
    <h4 class="fw-semibold mb-4">You may also like</h4>
    <div class="row g-4">
      <% relatedProducts.forEach(p => { %>
        <div class="col-lg-3 col-md-4 col-sm-6">
          <a href="/user/product/<%= p.product_id %>" class="text-decoration-none text-dark">
            <div class="card h-100 shadow-sm related-card">
              <img src="/uploads/<%= p.thumbnail %>" class="card-img-top">
              <div class="card-body">
                <h6><%= p.title %></h6>
                <span class="fw-semibold text-success">₹ <%= p.sale_price %></span>
                <div class="text-muted small"><%= p.colorsCount %> colors</div>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    </div>
  </div>

</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
let cartState = [];
let couponDiscount = <%= appliedCoupon?.discount || 0 %>;
let appliedCouponCode = "<%= appliedCoupon?.coupon_code || '' %>";


document.addEventListener('click', e => {
  const btn = e.target.closest('.qty-btn');
  if (!btn) return;

  const card = btn.closest('.cart-card');
  const delta = Number(btn.dataset.delta);
  if (!card || !delta) return;

  changeQty(card, delta);
});

/* INIT */
document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('.cart-card').forEach(card => {
    cartState.push({
      id: card.dataset.cartId,
      price: Number(card.dataset.price),
      stock: Number(card.dataset.stock),
      qty: Number(card.querySelector('.qty').innerText)
    });
    syncButtons(card);
  });


  if (appliedCouponCode) {
    document.querySelector('.coupon-box').innerHTML = `
      <div class="d-flex justify-content-between w-100 align-items-center">
        <span class="fw-semibold text-success">
          Coupon Applied: ${appliedCouponCode}
        </span>
        <button class="btn btn-sm btn-outline-danger"
          onclick="removeCouponUI(true)">
          Remove
        </button>
      </div>
    `;
  }

  renderSummary();
});


async function changeQty(card, delta) {
  const item = cartState.find(i => i.id === card.dataset.cartId);
  if (!item) return;

  const newQty = item.qty + delta;
  if (newQty < 1 || newQty > item.stock) return;

  const res = await fetch(`/user/cart/item/${item.id}`, {
    method:'PATCH',
    headers:{'Content-Type':'application/json'},
    body:JSON.stringify({ delta })
  });

  const data = await res.json();
  if (!data.success) return alert(data.error);

  item.qty = data.newQty;
  card.querySelector('.qty').innerText = data.newQty;
  syncButtons(card);

  if (appliedCouponCode) {
    await removeCouponUI(false);
  }

  renderSummary();
}

function calculateSubtotal() {
  return cartState.reduce((sum, i) => sum + i.price * i.qty, 0);
}

function renderSummary() {
  const subtotal = calculateSubtotal();
  const total = subtotal - couponDiscount;

  document.getElementById('subtotal').innerText = `₹ ${subtotal}`;
  document.getElementById('discount').innerText = `₹ ${couponDiscount}`;
  document.getElementById('grandTotal').innerText = `₹ ${total}`;
}


async function applyCoupon() {
  const code = document.getElementById('couponInput').value.trim().toUpperCase();
  if (!code) {
    Swal.fire('Coupon required', 'Please enter a coupon code', 'warning');
    return;
  }

  const subtotal = calculateSubtotal();

  const res = await fetch('/user/coupon/apply', {
    method:'POST',
    headers:{'Content-Type':'application/json'},
    body:JSON.stringify({ code, subtotal })
  });

  const data = await res.json();
  if (!data.success) {
    Swal.fire('Coupon Error', data.error, 'error');
    return;
  }

  couponDiscount = data.coupon.discount;
  appliedCouponCode = data.coupon.couponCode;

  location.reload(); 
}

async function removeCouponUI(showAlert = true) {
  await fetch('/user/coupon/remove', { method:'DELETE' });
  location.reload();
}

function syncButtons(card) {
  const item = cartState.find(i => i.id === card.dataset.cartId);
  card.querySelector('.minus').disabled = item.qty <= 1;
  card.querySelector('.plus').disabled  = item.qty >= item.stock;
}
</script>


