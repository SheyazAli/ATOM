<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Orders | ATOM</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body { font-family: "Segoe UI", sans-serif; background:#fff; }
    .account-wrapper { padding:60px 0 80px; }
    .order-card {
      background:#f8f9fa;
      border-radius:12px;
      padding:20px;
      transition: box-shadow .3s;
    }
    .order-card:hover { box-shadow:0 4px 20px rgba(0,0,0,.1); }
    .status-badge { text-transform: capitalize; }
    .page-title { font-size:28px; font-weight:600; }
    .pagination .page-link {
      border-radius:8px; margin:0 4px; color:#198754;
    }
    .pagination .active .page-link {
      background:#198754; border-color:#198754; color:#fff;
    }
    .order-thumbs img {
      width: 42px;
      height: 42px;
      object-fit: cover;
      border-radius: 6px;
      border: 1px solid #ddd;
    }
  </style>
</head>

<body>

<%- include('./userPartials/navbar') %>

<div class="container account-wrapper">
  <div class="row">

    <%- include('./userPartials/sidebar') %>

    <div class="col-lg-9 col-md-8">
      <div class="page-title mb-4">My Orders</div>

      <% if (!orders || orders.length === 0) { %>
        <p class="text-muted">No orders found.</p>
      <% } else { %>

        <div class="row g-4">
          <% orders.forEach(order => { 

            const hasCancelableItem = order.items.some(i =>
              ['placed','confirmed','shipped'].includes(i.status)
            );

            const hasReturnableItem = order.items.some(i =>
              i.status === 'delivered'
            );

          %>
            <div class="col-md-6">
              <div class="order-card h-100 d-flex flex-column">

                <!-- Header -->
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <p class="fw-bold mb-1">
                      Order ID: <%= order.orderNumber %>
                    </p>
                    <p class="mb-1 text-muted">
                      <%= new Date(order.created_at).toDateString() %>
                    </p>
                  </div>

                  <span class="badge bg-success status-badge">
                    <%= order.status %>
                  </span>
                </div>

                <!-- Product Thumbnails -->
                <% if (order.thumbnails && order.thumbnails.length) { %>
                  <div class="order-thumbs d-flex gap-2 mt-3">
                    <% order.thumbnails.forEach(img => { %>
                      <img src="/uploads/<%= img %>" alt="product">
                    <% }) %>
                  </div>
                <% } %>

                <!-- Total -->
                <div class="mt-3 fw-semibold">
                  Total: â‚¹<%= order.total %>
                </div>

                <!-- Actions -->
                <div class="d-flex gap-2 mt-auto pt-3">

                  <a
                    href="/user/orders/<%= order.orderNumber %>"
                    class="btn btn-outline-success btn-sm">
                    View Details
                  </a>

                  <% if (hasReturnableItem) { %>
                    <a
                      href="/user/orders/<%= order.orderNumber %>/return"
                      class="btn btn-outline-danger btn-sm">
                      Return
                    </a>
                  <% } %>

                  <% if (hasCancelableItem) { %>
                    <a
                      href="/user/orders/<%= order.orderNumber %>/cancel"
                      class="btn btn-outline-danger btn-sm">
                      Cancel
                    </a>
                  <% } %>

                </div>

              </div>
            </div>
          <% }) %>
        </div>

      <% } %>

      <% if (totalPages > 1) { %>
        <nav class="d-flex justify-content-center mt-5">
          <ul class="pagination">

            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
              <a class="page-link" href="?page=<%= currentPage - 1 %>">&laquo;</a>
            </li>

            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
              </li>
            <% } %>

            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
              <a class="page-link" href="?page=<%= currentPage + 1 %>">&raquo;</a>
            </li>

          </ul>
        </nav>
      <% } %>

    </div>
  </div>
</div>

<%- include('./userPartials/footer') %>

</body>
</html>
