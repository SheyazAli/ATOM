<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Address | ATOM</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      font-family: "Segoe UI", sans-serif;
      background: #fff;
    }

    .account-wrapper {
      padding: 60px 0 80px;
    }

    .address-input {
      background: #fff5f5;
      border: none;
      padding: 14px;
      border-radius: 10px;
      width: 100%;
    }

    .address-input:focus {
      outline: none;
      box-shadow: none;
    }

    .btn-save {
      background: #198754;
      color: #fff;
      padding: 14px;
      border-radius: 12px;
      border: none;
      font-weight: 500;
    }

    .btn-save:hover {
      background: #157347;
    }
  </style>
</head>

<body>

<!-- NAVBAR -->
<%- include('./userPartials/navbar') %>

<div class="container account-wrapper">
  <div class="row">

    <!-- SIDEBAR -->
    <%- include('./userPartials/sidebar') %>

    <!-- CONTENT -->
    <div class="col-lg-9 col-md-8">
      <h3 class="mb-4">Edit Address</h3>

      <!-- IMPORTANT: NO action, NO method -->
      <form id="editAddressForm">

        <div class="row g-4">

          <div class="col-md-6">
            <input name="first_name" class="address-input"
                   value="<%= address.first_name %>" required>
          </div>

          <div class="col-md-6">
            <input name="last_name" class="address-input"
                   value="<%= address.last_name %>" required>
          </div>

          <div class="col-12">
            <input name="building_name" class="address-input"
                   value="<%= address.building_name %>">
          </div>

          <div class="col-12">
            <input name="address_line_1" class="address-input"
                   value="<%= address.address_line_1 %>" required>
          </div>

          <div class="col-12">
            <input name="address_line_2" class="address-input"
                   value="<%= address.address_line_2 %>">
          </div>

          <div class="col-md-4">
            <input name="city" class="address-input"
                   value="<%= address.city %>" required>
          </div>

          <div class="col-md-4">
            <input name="state" class="address-input"
                   value="<%= address.state %>" required>
          </div>

          <div class="col-md-4">
            <input name="country" class="address-input"
                   value="<%= address.country %>" required>
          </div>

          <div class="col-md-6">
            <input name="postal_code" class="address-input"
                   value="<%= address.postal_code %>" required>
          </div>

          <div class="col-md-6">
            <input name="phone_number" class="address-input"
                   value="<%= address.phone_number %>" required>
          </div>

          <div class="col-12">
            <input name="email" class="address-input"
                   value="<%= address.email %>">
          </div>

          <div class="col-12">
            <label class="d-flex align-items-center gap-2">
              <input type="checkbox" name="is_default"
                <%= address.is_default ? 'checked' : '' %>>
              Set as default address
            </label>
          </div>

          <div class="col-md-6">
            <button type="submit" class="btn-save w-100">
              UPDATE ADDRESS
            </button>
          </div>

          <div class="col-md-6">
            <a href="/user/address" class="btn btn-outline-success w-100">
              CANCEL
            </a>
          </div>

        </div>
      </form>
    </div>

  </div>
</div>

<%- include('./userPartials/footer') %>

<script>
  const form = document.getElementById('editAddressForm');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    // checkbox fix
    data.is_default = formData.get('is_default') === 'on';

    try {
      const res = await fetch('/user/address/<%= address._id %>', {
        credentials: 'include',
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      if (res.ok) {
        window.location.href = '/user/address';
      } else {
        alert('Update failed');
      }
    } catch (err) {
      console.error(err);
      alert('Something went wrong');
    }
  });
</script>

</body>
</html>
