<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Order Details | ATOM</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: "Segoe UI", sans-serif;
      background: #fff;
      color: #111;
    }

    .account-wrapper {
      padding: 60px 0 80px;
    }

    .page-title {
      font-size: 26px;
      font-weight: 600;
      margin-bottom: 30px;
    }

    .card-box {
      background: #f9fafb;
      border-radius: 16px;
      padding: 24px;
      margin-bottom: 28px;
    }

    .product-row {
      padding: 14px 0;
    }

    .product-img {
      width: 72px;
      height: 92px;
      object-fit: cover;
      border-radius: 12px;
      border: 1px solid #ddd;
    }

    .status-line {
      display: flex;
      justify-content: space-between;
      position: relative;
      margin-top: 35px;
    }

    .status-line::before {
      content: "";
      position: absolute;
      top: 18px;
      left: 0;
      right: 0;
      height: 2px;
      background: #e2e8f0;
      z-index: 0;
    }

    .status-step {
      position: relative;
      z-index: 1;
      width: 20%;
      text-align: center;
    }

    .status-circle {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 6px;
      font-size: 15px;
      background: #e2e8f0;
      color: #fff;
    }

    .status-circle.active {
      background: #198754;
    }

    .status-text {
      font-size: 13px;
      color: #555;
    }

    .price-row {
      display: flex;
      justify-content: space-between;
      font-size: 14px;
      margin-bottom: 6px;
    }

    .price-final {
      font-size: 16px;
      font-weight: 600;
    }

    .action-btn {
      min-width: 220px;
    }
  </style>
</head>

<body>

<%- include('./userPartials/navbar') %>

<div class="container account-wrapper">
  <div class="row">

    <%- include('./userPartials/sidebar') %>

    <div class="col-lg-9 col-md-8">

      <div class="page-title">Order Details</div>

      <!-- PRODUCT DETAILS -->
      <div class="card-box">
        <h6 class="mb-3">Product Details</h6>

        <% items.forEach(item => { %>
          <div class="d-flex justify-content-between align-items-center product-row">
            <div class="d-flex align-items-center">
              <img src="/uploads/<%= item.image %>" class="product-img me-4">

              <div>
                <div class="fw-semibold"><%= item.name %></div>
                <div class="text-muted small mt-1">
                  Size: <%= item.size %> &nbsp;|&nbsp;
                  Qty: <%= item.quantity %> &nbsp;|&nbsp;
                  Price: â‚¹<%= item.price %>
                </div>
              </div>
            </div>

            <div class="fw-semibold">
              â‚¹<%= item.total %>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- ORDER STATUS -->
      <div class="card-box">
        <h6 class="mb-2">Order Status</h6>

        <% 
          const steps = [
            { key: 'placed', label: 'Order Placed', icon: 'âœ“' },
            { key: 'packed', label: 'Packed', icon: 'âœ“' },
            { key: 'shipped', label: 'Shipped', icon: 'ðŸšš' },
            { key: 'out_for_delivery', label: 'Out for Delivery', icon: 'ðŸšš' },
            { key: 'delivered', label: 'Delivered', icon: 'âœ“' }
          ];

          const currentIndex = steps.findIndex(s => s.key === order.status);
        %>

        <div class="status-line">
          <% steps.forEach((step, index) => { %>
            <div class="status-step">
              <div class="status-circle <%= index <= currentIndex ? 'active' : '' %>">
                <%= step.icon %>
              </div>
              <div class="status-text"><%= step.label %></div>
            </div>
          <% }) %>
        </div>
      </div>

      <!-- SHIPPING + PRICE -->
      <div class="row">
        <div class="col-md-6">
          <div class="card-box">
            <h6 class="mb-2">Shipping & Delivery Information</h6>

            <p class="mb-1 fw-semibold">
              <%= order.address.building_name %>
            </p>
            <p class="mb-1">
              <%= order.address.address_line_1 %>
            </p>
            <p class="mb-1">
              <%= order.address.city %>, <%= order.address.state %> - <%= order.address.postal_code %>
            </p>
            <p class="mb-1">
              Phone: <%= order.address.phone_number %>
            </p>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card-box">
            <h6 class="mb-2">Price Breakdown</h6>

            <div class="price-row">
              <span>Item Total</span>
              <span>â‚¹<%= price.itemTotal %></span>
            </div>
            <div class="price-row">
              <span>Discount</span>
              <span class="text-success">â‚¹<%= price.discount %></span>
            </div>
            <div class="price-row">
              <span>Shipping</span>
              <span class="text-success">
                <%= price.shipping === 0 ? 'Free' : 'â‚¹' + price.shipping %>
              </span>
            </div>

            <hr>

            <div class="price-row price-final">
              <span>Final Amount</span>
              <span>â‚¹<%= price.finalAmount %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- ACTIONS -->
      <div class="d-flex gap-3 mt-3">
        <a href="#" class="btn btn-success action-btn">
          Track Order
        </a>
        <a
          href="/user/orders/<%= order.orderNumber %>/invoice"
          class="btn btn-outline-secondary action-btn">
          Download Invoice (PDF)
        </a>
      </div>

    </div>
  </div>
</div>

<%- include('./userPartials/footer') %>

</body>
</html>
