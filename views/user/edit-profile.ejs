<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Profile | ATOM</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: "Segoe UI", sans-serif;
    }

    .edit-wrapper {
      padding: 60px 0;
    }

    .form-label {
      font-size: 14px;
      color: #777;
    }

    .profile-input {
      background: #fff5f5;
      border: none;
      padding: 14px;
      border-radius: 10px;
    }
  </style>
</head>
<body>

<%- include('./userPartials/navbar') %>

<div class="container edit-wrapper">
  <h3 class="mb-4">Edit Profile</h3>

  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form action="/user/profile/edit" method="POST">
    <div class="row g-4">

      <div class="col-md-6">
        <label class="form-label">First Name</label>
        <input name="first_name" class="profile-input w-100" value="<%= user.first_name %>" required>
      </div>

      <div class="col-md-6">
        <label class="form-label">Last Name</label>
        <input name="last_name" class="profile-input w-100" value="<%= user.last_name %>" required>
      </div>

      <div class="col-md-6">
        <label class="form-label">Email</label>
        <input name="email" type="email" class="profile-input w-100" value="<%= user.email %>" required>
      </div>

      <div class="col-md-6">
        <label class="form-label">Phone Number</label>
        <input name="phone_number" class="profile-input w-100" value="<%= user.phone_number || '' %>">
      </div>

    </div>

    <button class="btn btn-success mt-4 w-100">Save Changes</button>
  </form>
</div>

<%- include('./userPartials/footer') %>

</body>
</html>
