<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Profile | ATOM</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: "Segoe UI", sans-serif;
      background: #fff;
      color: #111;
    }

    .account-wrapper {
      padding: 60px 0 80px;
    }

    .profile-center {
      max-width: 820px;
      margin: 0 auto;
      padding-top: 10px;
    }

    .profile-title {
      font-size: 28px;
      font-weight: 600;
      margin-bottom: 30px;
    }

    .form-label {
      font-size: 14px;
      color: #777;
      margin-bottom: 6px;
    }

    .profile-input.is-invalid {
      border: 1px solid #dc3545;
      background: #fff;
    }

    .profile-input.is-invalid + .invalid-feedback {
      display: block;
    }

    .invalid-feedback {
      display: none;
      font-size: 12px;
      color: #dc3545;
      margin-top: 4px;
    }


    .profile-input {
      background: #fff5f5;
      border: 1px solid #eee;
      padding: 14px 16px;
      border-radius: 12px;
      font-size: 14px;
    }

    .profile-input:focus {
      outline: none;
      box-shadow: none;
      border-color: #198754;
      background: #fff;
    }

    .action-buttons {
      margin-top: 30px;
      display: flex;
      gap: 14px;
    }

    @media (max-width: 768px) {
      .action-buttons {
        flex-direction: column;
      }
    }
  </style>
</head>

<body>

<!-- NAVBAR -->
<%- include('./userPartials/navbar') %>

<div class="container account-wrapper">
  <div class="row">

    <!-- SIDEBAR -->
    <%- include('./userPartials/sidebar') %>

    <!-- CONTENT -->
    <div class="col-lg-9 col-md-8">

      <div class="profile-center">
        <div class="profile-title">Edit Profile</div>

        <% if (error) { %>
          <div class="alert alert-danger">
            <%= error %>
          </div>
        <% } %>

        <form id="editProfileForm" >
          <div class="row g-4">

            <div class="col-md-6">
              <label class="form-label">First Name</label>
              <input
                name="first_name"
                class="profile-input w-100"
                value="<%= user.first_name %>"
              >
              <div class="invalid-feedback">First name is required</div>
            </div>

            <div class="col-md-6">
              <label class="form-label">Last Name</label>
              <input
                name="last_name"
                class="profile-input w-100"
                value="<%= user.last_name %>"
              >
              <div class="invalid-feedback">Last name is required</div>
            </div>

            <div class="col-md-6">
              <label class="form-label">Email</label>
              <input
                name="email"
                type="email"
                class="profile-input w-100"
                value="<%= user.email %>"
              >
              <div class="invalid-feedback">Enter a valid email address</div>
            </div>

            <div class="col-md-6">
              <label class="form-label">Phone Number</label>
              <input
                name="phone_number"
                class="profile-input w-100"
                value="<%= user.phone_number || '' %>"
                inputmode="numeric"
                maxlength="10"
              >
              <div class="invalid-feedback">Phone number must be 10 digits</div>
            </div>

          </div>

          <div class="action-buttons">
            <button type="submit" class="btn btn-success px-4">
              Save Changes
            </button>

            <a href="/user/profile" class="btn btn-secondary px-4">
              Back
            </a>
          </div>
        </form>

      </div>

    </div>
  </div>
</div>

<!-- FOOTER -->
<%- include('./userPartials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
const form = document.getElementById('editProfileForm');

const rules = {
  first_name: v => v.trim() !== '',
  last_name: v => v.trim() !== '',
  email: v => /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(v),
  phone_number: v => !v || /^\d{10}$/.test(v)
};

function validateField(input) {
  const rule = rules[input.name];
  if (!rule) return true;

  const valid = rule(input.value);
  input.classList.toggle('is-invalid', !valid);
  return valid;
}

form.querySelectorAll('input').forEach(input => {
  input.addEventListener('blur', () => validateField(input));
});

form.addEventListener('submit', async (e) => {
  e.preventDefault();

  let isValid = true;
  form.querySelectorAll('input').forEach(input => {
    if (!validateField(input)) isValid = false;
  });

  if (!isValid) return;

  const data = Object.fromEntries(new FormData(form).entries());

  try {
    const res = await fetch('/user/profile/edit', {
      method: 'PATCH',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(data)
    });

    const result = await res.json();

    if (!res.ok) {
      return Swal.fire({
        icon: 'error',
        title: 'Error',
        text: result.message || 'Validation failed'
      });
    }

    window.location.href = result.redirect;

  } catch {
    Swal.fire({
      icon: 'error',
      title: 'Network Error',
      text: 'Please try again later'
    });
  }
});
</script>

