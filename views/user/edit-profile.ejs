<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Profile | ATOM</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: "Segoe UI", sans-serif;
      background: #fff;
      color: #111;
    }

    .account-wrapper {
      padding: 60px 0 80px;
    }

    .profile-center {
      max-width: 820px;
      margin: 0 auto;
      padding-top: 10px;
    }

    .profile-title {
      font-size: 28px;
      font-weight: 600;
      margin-bottom: 30px;
    }

    .form-label {
      font-size: 14px;
      color: #777;
      margin-bottom: 6px;
    }

    .profile-input {
      background: #fff5f5;
      border: 1px solid #eee;
      padding: 14px 16px;
      border-radius: 12px;
      font-size: 14px;
    }

    .profile-input:focus {
      outline: none;
      box-shadow: none;
      border-color: #198754;
      background: #fff;
    }

    .action-buttons {
      margin-top: 30px;
      display: flex;
      gap: 14px;
    }

    @media (max-width: 768px) {
      .action-buttons {
        flex-direction: column;
      }
    }
  </style>
</head>

<body>

<!-- NAVBAR -->
<%- include('./userPartials/navbar') %>

<div class="container account-wrapper">
  <div class="row">

    <!-- SIDEBAR -->
    <%- include('./userPartials/sidebar') %>

    <!-- CONTENT -->
    <div class="col-lg-9 col-md-8">

      <div class="profile-center">
        <div class="profile-title">Edit Profile</div>

        <% if (error) { %>
          <div class="alert alert-danger">
            <%= error %>
          </div>
        <% } %>

        <form action="/user/profile/edit?_method=PATCH" method="POST">
          <div class="row g-4">

            <div class="col-md-6">
              <label class="form-label">First Name</label>
              <input
                name="first_name"
                class="profile-input w-100"
                value="<%= user.first_name %>"
                required
              >
            </div>

            <div class="col-md-6">
              <label class="form-label">Last Name</label>
              <input
                name="last_name"
                class="profile-input w-100"
                value="<%= user.last_name %>"
                required
              >
            </div>

            <div class="col-md-6">
              <label class="form-label">Email</label>
              <input
                name="email"
                type="email"
                class="profile-input w-100"
                value="<%= user.email %>"
                required
              >
            </div>

            <div class="col-md-6">
              <label class="form-label">Phone Number</label>
              <input
                name="phone_number"
                class="profile-input w-100"
                value="<%= user.phone_number || '' %>"
              >
            </div>

          </div>

          <div class="action-buttons">
            <button type="submit" class="btn btn-success px-4">
              Save Changes
            </button>

            <a href="/user/profile" class="btn btn-secondary px-4">
              Back
            </a>
          </div>
        </form>

      </div>

    </div>
  </div>
</div>

<!-- FOOTER -->
<%- include('./userPartials/footer') %>

</body>
</html>
