<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Products | ATOM</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #fafafa;
    }

    /* FILTER SIDEBAR */
    .filter-box {
      border: 1px solid #e5e5e5;
      padding: 18px;
      border-radius: 8px;
      background: #fff;
      position: sticky;
      top: 90px;
    }

    .accordion-button {
      font-weight: 600;
      padding: 10px 0;
    }

    .accordion-button:not(.collapsed) {
      background: none;
      color: #000;
      box-shadow: none;
    }

    .accordion-item {
      border: none;
      border-bottom: 1px solid #eee;
    }

    /* PRODUCT CARD */
    .product-card {
      border: none;
      border-radius: 12px;
      background: #fff;
      overflow: hidden;
      height: 100%;
      display: flex;
      flex-direction: column;
      transition: all 0.3s ease;
    }

    .product-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 30px rgba(0,0,0,0.12);
    }

    .product-card img {
      height: 320px;
      width: 100%;
      object-fit: cover;
    }

    .product-card .card-body {
      padding: 14px;
      display: flex;
      flex-direction: column;
      min-height: 140px;
    }
    .product-disabled {
      opacity: 0.55;
      pointer-events: none; /* disables click */
    }

    .unavailable-badge {
      position: absolute;
      top: 12px;
      left: 12px;
      background: #dc3545;
      color: #fff;
      font-size: 12px;
      padding: 4px 8px;
      border-radius: 6px;
      font-weight: 600;
      z-index: 2;
    }

    .product-card h6 {
      font-size: 14px;
      font-weight: 600;
      line-height: 1.4;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .price-box {
      min-height: 24px;
      margin-bottom: 4px;
    }

    .mrp {
      text-decoration: line-through;
      color: #888;
      font-size: 13px;
    }

    .sale {
      color: #198754;
      font-weight: 600;
      font-size: 14px;
      margin-left: 6px;
    }

    .discount {
      color: #d9534f;
      font-size: 12px;
      font-weight: 600;
      margin-left: 6px;
    }

    .single-price {
      color: #198754;
      font-weight: 600;
      font-size: 14px;
    }

    .color-text {
      font-size: 13px;
      color: #777;
      margin-top: auto;
    }

    .pagination {
      justify-content: center;
      margin-top: 40px;
    }
  </style>
</head>

<body>

<%- include('./userPartials/navbar') %>

<div class="container-fluid px-5 py-5">
  <div class="row">

    <!-- FILTERS -->
    <div class="col-lg-2 col-md-3">
      <form method="GET" action="/user/products" class="filter-box">
        <% if (search) { %>
          <input type="hidden" name="search" value="<%= search %>">
        <% } %>

        <h6 class="fw-semibold mb-2">Sort</h6>
        <select name="sort" class="form-select mb-3" onchange="this.form.submit()">
          <option value="">Default</option>
          <option value="priceLow" <%= sort==='priceLow'?'selected':'' %>>Price: Low → High</option>
          <option value="priceHigh" <%= sort==='priceHigh'?'selected':'' %>>Price: High → Low</option>
          <option value="az" <%= sort==='az'?'selected':'' %>>A → Z</option>
          <option value="za" <%= sort==='za'?'selected':'' %>>Z → A</option>
        </select>

        <div class="accordion" id="filterAccordion">

          <!-- CATEGORY -->
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button collapsed" type="button"
                      data-bs-toggle="collapse" data-bs-target="#categoryFilter">
                Category
              </button>
            </h2>
            <div id="categoryFilter" class="accordion-collapse collapse">
              <div class="accordion-body px-0">
                <% categories.forEach(cat => { %>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox"
                           name="category" value="<%= cat.category_id %>"
                           <%= category.includes(cat.category_id) ? 'checked' : '' %>>
                    <label class="form-check-label"><%= cat.name %></label>
                  </div>
                <% }) %>
              </div>
            </div>
          </div>

          <!-- SIZE -->
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button collapsed" type="button"
                      data-bs-toggle="collapse" data-bs-target="#sizeFilter">
                Size
              </button>
            </h2>
            <div id="sizeFilter" class="accordion-collapse collapse">
              <div class="accordion-body px-0">
                <% ['Small','Medium','Large','X-Large'].forEach(s => { %>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox"
                           name="size" value="<%= s %>"
                           <%= size.includes(s) ? 'checked' : '' %>>
                    <label class="form-check-label"><%= s %></label>
                  </div>
                <% }) %>
              </div>
            </div>
          </div>

          <!-- COLOR -->
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button collapsed" type="button"
                      data-bs-toggle="collapse" data-bs-target="#colorFilter">
                Color
              </button>
            </h2>
            <div id="colorFilter" class="accordion-collapse collapse">
              <div class="accordion-body px-0">
                <% ['Black','White','Yellow','Green','Red','Grey','Purple','Blue','Orange'].forEach(c => { %>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox"
                           name="color" value="<%= c %>"
                           <%= color.includes(c) ? 'checked' : '' %>>
                    <label class="form-check-label"><%= c %></label>
                  </div>
                <% }) %>
              </div>
            </div>
          </div>

        </div>

        <button class="btn btn-dark w-100 mt-3">Apply Filters</button>
        <a href="/user/products" class="btn btn-outline-dark w-100 mt-2">Reset</a>

      </form>
    </div>

    <!-- PRODUCTS -->
    <div class="col-lg-10 col-md-9">
      <div class="row g-4">

        <% products.forEach(p => { 
          const samePrice = p.regular_price === p.sale_price;
          const discount = !samePrice
            ? Math.round(((p.regular_price - p.sale_price) / p.regular_price) * 100)
            : 0;
        %>

          <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">
            <a href="<%= p.status ? `/user/product/${p.product_id}` : 'javascript:void(0)' %>"
            class="text-decoration-none text-dark">

            <div class="card product-card <%= !p.status ? 'product-disabled' : '' %>"
                style="position:relative;">
                <% if (!p.status) { %>
                  <div class="unavailable-badge">Currently Unavailable</div>
                <% } %>
                <img src="/uploads/<%= p.thumbnail %>" alt="<%= p.title %>">

                <div class="card-body">
                  <h6><%= p.title %></h6>

                  <div class="price-box">
                    <% if (samePrice) { %>
                      <span class="single-price">₹ <%= p.sale_price %></span>
                    <% } else { %>
                      <span class="mrp">₹ <%= p.regular_price %></span>
                      <span class="sale">₹ <%= p.sale_price %></span>
                      <span class="discount"><%= discount %>% OFF</span>
                    <% } %>
                  </div>

                  <div class="color-text">
                    Available in <%= p.colorsCount %> colors
                  </div>
                </div>
              </div>

            </a>
          </div>

        <% }) %>

      </div>

      <!-- PAGINATION -->
      <nav>
        <ul class="pagination">
          <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPageNum ? 'active' : '' %>">
              <a class="page-link"
                href="?page=<%= i %>
                &search=<%= search %>
                &sort=<%= sort %>
                <% category.forEach(c=>{ %>&category=<%= c %><% }) %>
                <% size.forEach(s=>{ %>&size=<%= s %><% }) %>
                <% color.forEach(c=>{ %>&color=<%= c %><% }) %>">
                <%= i %>
              </a>
            </li>
          <% } %>
        </ul>
      </nav>

    </div>
  </div>
</div>

<%- include('./userPartials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>