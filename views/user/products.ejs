<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Products | ATOM</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #fafafa;
    }

    /* FILTER SIDEBAR */
    .filter-box {
      border: 1px solid #e5e5e5;
      padding: 18px;
      border-radius: 8px;
      background: #fff;
      position: sticky;
      top: 90px;
    }

    .filter-box h6 {
      font-weight: 600;
      margin-top: 16px;
      margin-bottom: 8px;
    }

    /* ================= PRODUCT CARD FIX ================= */

    .product-card {
      border: none;
      border-radius: 12px;
      background: #fff;
      overflow: hidden;
      height: 100%;                     /* ðŸ”¥ equal height */
      display: flex;
      flex-direction: column;
      transition: all 0.3s ease;
    }

    .product-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 30px rgba(0,0,0,0.12);
    }

    /* IMAGE â€” FIXED HEIGHT */
    .product-card img {
      height: 320px;                    /* ðŸ”¥ same for all */
      width: 100%;
      object-fit: cover;
      transition: transform 0.4s ease;
    }

    .product-card:hover img {
      transform: scale(1.05);
    }

    /* CARD BODY â€” LOCK HEIGHT */
    .product-card .card-body {
      padding: 14px;
      display: flex;
      flex-direction: column;
      min-height: 140px;                /* ðŸ”¥ key fix */
    }

    /* TITLE â€” 2 LINE CLAMP */
    .product-card h6 {
      font-size: 14px;
      font-weight: 600;
      margin-bottom: 6px;
      line-height: 1.4;

      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    /* PRICE AREA â€” RESERVED SPACE */
    .price-box {
      min-height: 24px;                 /* ðŸ”¥ even if no sale */
      margin-bottom: 4px;
    }

    .mrp {
      text-decoration: line-through;
      color: #888;
      font-size: 13px;
    }

    .sale {
      color: #198754;
      font-weight: 600;
      font-size: 14px;
      margin-left: 6px;
    }

    /* COLORS â€” ALWAYS AT BOTTOM */
    .color-text {
      font-size: 13px;
      color: #777;
      margin-top: auto;                 /* ðŸ”¥ push to bottom */
      min-height: 18px;
    }

    /* PAGINATION */
    .pagination {
      justify-content: center;
      margin-top: 40px;
    }

    .page-link {
      color: #000;
      border-radius: 50%;
      margin: 0 4px;
    }

    .page-item.active .page-link {
      background: #000;
      border-color: #000;
      color: #fff;
    }
  </style>
</head>
<body>

<%- include('./userPartials/navbar') %>

<div class="container-fluid px-5 py-5">
  <div class="row">

    <!-- FILTERS -->
    <div class="col-lg-2 col-md-3">
      <form method="GET" action="/user/products" class="filter-box">

        <input class="form-control mb-3"
               name="search"
               value="<%= search %>"
               placeholder="Search products">

        <h6>Category</h6>
        <% categories.forEach(cat => { %>
          <div class="form-check">
            <input class="form-check-input"
                   type="checkbox"
                   name="category"
                   value="<%= cat.category_id %>"
                   <%= category.includes(cat.category_id) ? 'checked' : '' %>>
            <label class="form-check-label"><%= cat.name %></label>
          </div>
        <% }) %>

        <h6>Size</h6>
        <% ['S','M','L','XL'].forEach(s => { %>
          <div class="form-check">
            <input class="form-check-input"
                   type="checkbox"
                   name="size"
                   value="<%= s %>"
                   <%= size.includes(s) ? 'checked' : '' %>>
            <label class="form-check-label"><%= s %></label>
          </div>
        <% }) %>

        <h6>Color</h6>
        <% ['Black','White','Red'].forEach(c => { %>
          <div class="form-check">
            <input class="form-check-input"
                   type="checkbox"
                   name="color"
                   value="<%= c %>"
                   <%= color.includes(c) ? 'checked' : '' %>>
            <label class="form-check-label"><%= c %></label>
          </div>
        <% }) %>

        <h6>Sort</h6>
        <select name="sort" class="form-select mb-3">
          <option value="">Default</option>
          <option value="priceLow" <%= sort==='priceLow'?'selected':'' %>>Price: Low â†’ High</option>
          <option value="priceHigh" <%= sort==='priceHigh'?'selected':'' %>>Price: High â†’ Low</option>
          <option value="az" <%= sort==='az'?'selected':'' %>>A â†’ Z</option>
          <option value="za" <%= sort==='za'?'selected':'' %>>Z â†’ A</option>
        </select>

        <button class="btn btn-dark w-100 mb-2">Apply</button>
        <a href="/user/products" class="btn btn-outline-dark w-100">Reset</a>
      </form>
    </div>

    <!-- PRODUCTS -->
    <div class="col-lg-10 col-md-9">
      <div class="row g-4">

        <% products.forEach(p => { %>
          <!-- ðŸ”¥ 4 PER ROW -->
          <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">
            <div class="card product-card">

              <img src="/uploads/<%= p.thumbnail %>" alt="<%= p.title %>">

              <div class="card-body">
                <h6><%= p.title %></h6>

                <div class="price-box">
                  <span class="mrp">â‚¹ <%= p.regular_price %></span>
                  <span class="sale">â‚¹ <%= p.sale_price %></span>
                </div>

                <div class="color-text">
                  Available in <%= p.colorsCount %> colors
                </div>
              </div>

            </div>
          </div>
        <% }) %>

      </div>

      <!-- PAGINATION -->
      <nav>
        <ul class="pagination">
          <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPageNum ? 'active' : '' %>">
              <a class="page-link"
                 href="?page=<%= i %>&search=<%= search %>&sort=<%= sort %>
                 <% category.forEach(c=>{ %>&category=<%= c %><% }) %>
                 <% size.forEach(s=>{ %>&size=<%= s %><% }) %>
                 <% color.forEach(c=>{ %>&color=<%= c %><% }) %>">
                <%= i %>
              </a>
            </li>
          <% } %>
        </ul>
      </nav>

    </div>
  </div>
</div>

<%- include('./userPartials/footer') %>

</body>
</html>
