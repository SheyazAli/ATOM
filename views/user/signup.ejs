<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ATOM | Signup</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  <style>
  body {
    font-family: 'Segoe UI', sans-serif;
  }

  /* DARKER BACKGROUND */
  .signup-wrapper {
    min-height: 100vh;
    background: url("/uploads/SALE.jpg") center / cover no-repeat;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .signup-wrapper::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.6); /* ðŸ‘ˆ darker overlay */
  }

  /* SMALLER WHITE POPUP */
  .signup-card {
    position: relative;
    z-index: 2;
    background: #fff;
    width: 100%;
    max-width: 360px; /* ðŸ‘ˆ smaller box */
    padding: 26px 24px;
    border-radius: 12px;
    box-shadow: 0 15px 50px rgba(0,0,0,0.35);
    text-align: center;
  }

  .signup-card img {
    width: 42px;
    margin-bottom: 8px;
  }

  .signup-card h4 {
    font-weight: 600;
    margin-bottom: 18px;
  }

  .form-control {
    height: 40px;
    font-size: 13px;
    border-radius: 6px;
  }

  .form-label {
    font-size: 12px;
    font-weight: 500;
    text-align: left;
    display: block;
  }

  /* SUBMIT BUTTON */
  .btn-signup {
    background: #008060; /* âœ… exact HEX */
    color: #fff;
    border: none;
    height: 42px;
    font-weight: 500;
    border-radius: 6px;
  }

  .btn-signup:hover {
    background: #006e52;
  }

  .terms {
    font-size: 10.5px;
    color: #666;
    margin-top: 12px;
    line-height: 1.4;
  }
  #google-login-link {
        text-decoration: none ;
    }

  .terms a {
    color: #0d6efd;
    text-decoration: none;
  }

  .divider {
    margin: 14px 0;
    text-decoration: none;
    font-size: 12px;
    color: #555;
  }
  .input-group-text:hover {
    background-color: #f1f1f1;
  }

  .links a {
    font-size: 12px;
    text-decoration: none;
    margin: 0 4px;
  }
</style>

</head>
<body>

<!-- NAVBAR -->
<%- include('./userPartials/navbar') %>

<!-- SIGNUP SECTION -->
<section class="signup-wrapper">

  <div class="signup-card">
    <!-- Logo -->
    <img src="/uploads/Atom logo white bg.png" alt="ATOM">

    <h4>Signup</h4>

    <form action="/user/signup" method="POST">
      <!-- validation -->
          <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger text-center py-1">
        <%= error %>
      </div>
    <% } %>

      <div class="mb-3 text-start">
        <label class="form-label">First name <span class="text-danger">*</span></label>
        <input type="text" name="firstName" class="form-control" required>
      </div>

      <div class="mb-3 text-start">
        <label class="form-label">Last name <span class="text-danger">*</span></label>
        <input type="text" name="lastName" class="form-control" required>
      </div>

      <div class="mb-3 text-start">
        <label class="form-label">Enter your email id <span class="text-danger">*</span></label>
        <input type="email" name="email" class="form-control" required>
      </div>

      <div class="mb-3 text-start">
        <label class="form-label">
          Enter your password <span class="text-danger">*</span>
        </label>
        <div class="input-group">
          <input type="password" name="password" id="password" class="form-control" required >
          <span class="input-group-text" id="togglePassword" role="button">
            <i class="bi bi-eye"></i>
          </span>
        </div>
      </div>

    <div class="mb-3 text-start">
        <label class="form-label">
          Confirm your password <span class="text-danger">*</span>
        </label>
        <div class="input-group">
          <input type="password"name="confirmPassword"id="confirmPassword"class="form-control"required>
          <span class="input-group-text" id="toggleConfirm" role="button">
            <i class="bi bi-eye"></i>
          </span>
        </div>
      </div>

      <div class="mb-3 text-start">
        <label class="form-label">Referral code</label>
        <input type="text" name="referralCode" class="form-control">
      </div>

      <button type="submit" class="btn btn-success w-100">
  Submit
</button>
    </form>

    <p class="terms">
      By proceeding, you agree to the
      <a href="#">Terms and Conditions</a>,
      <a href="#">Terms of Sale</a>,
      <a href="#">Return Policy</a>,
      <a href="#">Cookies Policy</a> and
      <a href="#">Privacy Policy</a>.
    </p>

<div class="divider">
    <a href="/user/google" class="btn btn-outline-dark w-100 mt-2">
  Continue with Google
</a>
</div>

    <div class="links">
      <a href="/user/login">Already Have An Account?</a> |
      <a href="/">Go To Homepage</a>
    </div>
  </div>

</section>

<!-- FOOTER -->
<%- include('./userPartials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  function togglePassword(inputId, toggleId) {
    const input = document.getElementById(inputId);
    const toggle = document.getElementById(toggleId);
    const icon = toggle.querySelector('i');

    toggle.addEventListener('click', () => {
      const isPassword = input.type === 'password';
      input.type = isPassword ? 'text' : 'password';

      icon.classList.toggle('bi-eye');
      icon.classList.toggle('bi-eye-slash');
    });
  }

  togglePassword('password', 'togglePassword');
  togglePassword('confirmPassword', 'toggleConfirm');
</script>

</body>
</html>
