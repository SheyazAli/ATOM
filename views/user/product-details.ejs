<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= product.title %></title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body { background:#fff; }

    /* ---------- IMAGE SECTION ---------- */
    .image-wrapper {
      width: 100%;
      height: 520px;
      background: #f7f7f7;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 12px;
    }

    .main-img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      cursor: zoom-in;
    }

    .thumb {
      width: 90px;
      height: 90px;
      object-fit: contain;
      background: #f7f7f7;
      border: 1px solid #ddd;
      cursor: pointer;
    }

    /* ---------- OPTIONS ---------- */
    .option-box {
      border: 1px solid #ccc;
      padding: 10px 16px;
      margin-right: 8px;
      cursor: pointer;
      text-align: center;
      min-width: 70px;
    }

    .option-active { border: 2px solid #000; }
    .option-disabled { opacity: 0.4; pointer-events: none; }

    .stock-text { font-size: 12px; margin-top: 4px; }
    .low-stock { color: #c0392b; }
    .out-stock { color: #999; }

    /* ---------- ADDITIONS ---------- */
    .rating-stars i { color: #f5a623; }
    .coupon-box {
      border: 1px dashed #198754;
      padding: 10px;
      border-radius: 6px;
      background: #f0fff7;
      font-size: 14px;
    }
    .review-card {
      border-bottom: 1px solid #eee;
      padding: 12px 0;
    }

    /* ---------- ZOOM MODAL ---------- */
    .modal-content { background:#000; }
    .zoom-container { overflow: hidden; cursor: zoom-in; }
    .zoom-img {
      max-width: 100%;
      max-height: 90vh;
      object-fit: contain;
      transition: transform .25s ease;
    }
  </style>
</head>

<body>

<%- include('./userPartials/navbar') %>

<div class="container py-4">

  <!-- ---------- BREADCRUMB (UNCHANGED) ---------- -->
  <nav class="breadcrumb mb-4">
    <a class="breadcrumb-item text-decoration-none" href="/user/home">Home</a>

    <% if (category) { %>
      <a class="breadcrumb-item text-decoration-none"
         href="/user/products?category=<%= category.category_id %>">
        <%= category.name %>
      </a>
    <% } else { %>
      <a class="breadcrumb-item text-decoration-none" href="/user/products">
        Products
      </a>
    <% } %>

    <span class="breadcrumb-item active"><%= product.title %></span>
  </nav>

  <div class="row">
    <!-- ---------- LEFT : IMAGES (UNCHANGED) ---------- -->
    <div class="col-lg-6">
      <div class="image-wrapper mb-3">
        <img id="mainImage" class="main-img">
      </div>
      <div id="thumbs" class="d-flex gap-2 flex-wrap"></div>
    </div>

    <!-- ---------- RIGHT : DETAILS ---------- -->
    <div class="col-lg-6">
      <h3><%= product.title %></h3>

      <!-- ‚≠ê RATING (NEW) -->
      <div class="d-flex align-items-center mb-2 rating-stars">
        <% for(let i=1;i<=5;i++){ %>
          <i class="bi bi-star-fill"></i>
        <% } %>
        <span class="ms-2 text-muted">(4.6 / 5 ¬∑ 128 reviews)</span>
      </div>

      <div class="mb-3">
        <span class="text-decoration-line-through text-muted">
          ‚Çπ <%= product.regular_price %>
        </span>
        <span class="fs-4 fw-bold ms-2">
          ‚Çπ <%= product.sale_price %>
        </span>
      </div>

      <!-- üéüÔ∏è COUPONS (NEW) -->
      <div class="coupon-box mb-3">
        üéâ Use code <strong>ATOM10</strong> & get <strong>10% OFF</strong><br>
        üí≥ Extra ‚Çπ200 off on prepaid orders
      </div>

      <!-- COLOR (UNCHANGED) -->
      <h6>Color</h6>
      <div class="d-flex mb-3">
        <% colors.forEach(c => { %>
          <div class="option-box color-box" data-color="<%= c %>"><%= c %></div>
        <% }) %>
      </div>

      <!-- SIZE (UNCHANGED) -->
      <h6>Size</h6>
      <div id="sizes" class="d-flex mb-4"></div>

      <button class="btn btn-success w-100 mb-2" <%= isOutOfStock ? 'disabled' : '' %>>
        ADD TO CART
      </button>

      <button class="btn btn-dark w-100 mb-2" <%= isOutOfStock ? 'disabled' : '' %>>
        BUY NOW
      </button>

      <button class="btn btn-outline-dark w-100">
        ‚ù§Ô∏è MOVE TO WISHLIST
      </button>
    </div>
  </div>
</div>

<!-- ---------- REVIEWS SECTION (NEW) ---------- -->
<div class="container pb-5">
  <h4 class="fw-semibold mb-3">Customer Reviews</h4>

  <div class="review-card">
    <strong>Rahul</strong>
    <div class="rating-stars">
      <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
      <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
      <i class="bi bi-star-fill"></i>
    </div>
    <p class="mb-0 text-muted">Quality is excellent. Fits perfectly!</p>
  </div>

  <div class="review-card">
    <strong>Anjali</strong>
    <div class="rating-stars">
      <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
      <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
      <i class="bi bi-star"></i>
    </div>
    <p class="mb-0 text-muted">Nice fabric but delivery was late.</p>
  </div>
</div>

<!-- ---------- RELATED PRODUCTS (UNCHANGED) ---------- -->
<div class="container pb-5 mt-5">
  <h4 class="fw-semibold mb-4">Related Products</h4>

  <div class="row g-4">
    <% if (!relatedProducts.length) { %>
      <p class="text-muted">No related products found.</p>
    <% } %>

    <% relatedProducts.forEach(p => { %>
      <div class="col-lg-3 col-md-4 col-sm-6">
        <a href="/user/product/<%= p.product_id %>" class="text-decoration-none text-dark">
          <div class="card h-100 shadow-sm">
            <img src="/uploads/<%= p.thumbnail %>"
                 class="card-img-top"
                 style="height:260px; object-fit:cover;">
            <div class="card-body">
              <h6><%= p.title %></h6>
              <span class="fw-semibold text-success">‚Çπ <%= p.sale_price %></span>
              <div class="text-muted small"><%= p.colorsCount %> colors</div>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</div>

<!-- ---------- ZOOM MODAL (UNCHANGED) ---------- -->
<div class="modal fade" id="zoomModal">
  <div class="modal-dialog modal-fullscreen">
    <div class="modal-content">
      <button class="btn btn-light position-absolute top-0 end-0 m-3"
              data-bs-dismiss="modal">‚úï</button>

      <div class="d-flex align-items-center justify-content-center h-100">
        <button class="btn btn-light me-3" onclick="prev()">‚Äπ</button>
        <div class="zoom-container" id="zoomContainer">
          <img id="zoomImg" class="zoom-img">
        </div>
        <button class="btn btn-light ms-3" onclick="next()">‚Ä∫</button>
      </div>
    </div>
  </div>
</div>

<script>
  /* YOUR EXISTING SCRIPT ‚Äî UNCHANGED */
  const colorMap = <%- JSON.stringify(colorMap) %>;
  let currentColor = "<%= defaultColor %>";
  let images = [];
  let currentIndex = 0;
  let scale = 1;

  function renderImages(color) {
    images = colorMap[color].images;
    currentIndex = 0;
    mainImage.src = '/uploads/' + images[0];
    thumbs.innerHTML = images.map((img,i)=>
      `<img src="/uploads/${img}" class="thumb" onclick="setImage(${i})">`
    ).join('');
  }

  function renderSizes(color) {
    sizes.innerHTML = colorMap[color].sizes.map(s => `
      <div class="option-box ${s.stock===0?'option-disabled':''}">
        ${s.size}
        <div class="stock-text ${s.stock===0?'out-stock':'low-stock'}">
          ${s.stock===0 ? 'Out of stock' :
            s.stock<4 ? `Only ${s.stock} left` : ''}
        </div>
      </div>
    `).join('');
  }

  function setImage(i){ currentIndex=i; mainImage.src='/uploads/'+images[i]; }
  function openZoom(){ zoomImg.src='/uploads/'+images[currentIndex]; scale=1; zoomImg.style.transform='scale(1)'; new bootstrap.Modal(zoomModal).show(); }
  zoomContainer.addEventListener('wheel',e=>{ e.preventDefault(); scale+=e.deltaY*-0.001; scale=Math.min(Math.max(1,scale),4); zoomImg.style.transform=`scale(${scale})`; });
  function next(){ currentIndex=(currentIndex+1)%images.length; openZoom(); }
  function prev(){ currentIndex=(currentIndex-1+images.length)%images.length; openZoom(); }

  document.querySelectorAll('.color-box').forEach(b=>{
    b.onclick=()=>{ document.querySelectorAll('.color-box').forEach(x=>x.classList.remove('option-active')); b.classList.add('option-active'); currentColor=b.dataset.color; renderImages(currentColor); renderSizes(currentColor); };
  });

  mainImage.onclick=openZoom;
  document.querySelector(`[data-color="${currentColor}"]`).classList.add('option-active');
  renderImages(currentColor);
  renderSizes(currentColor);
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
<%- include('./userPartials/footer') %>
</body>
</html>
