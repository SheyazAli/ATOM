<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= product.title %></title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body { background:#fff; }

    /* ---------- IMAGE SECTION (FIXED) ---------- */
    .image-wrapper {
      width: 100%;
      aspect-ratio: 5 / 7;
      overflow: hidden;
    }

    .main-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      cursor: zoom-in;
      display: block;
    }

    .thumb {
      width: 90px;
      aspect-ratio: 5 / 7;
      object-fit: cover;
      cursor: pointer;
      border: none;
    }

    /* ---------- OPTIONS ---------- */
    .option-box {
      border: 1px solid #ccc;
      padding: 10px 16px;
      margin-right: 8px;
      cursor: pointer;
      text-align: center;
      min-width: 70px;
    }

    .option-active { border: 2px solid #000; }
    .option-disabled { opacity: 0.4; pointer-events: none; }

    .stock-text { font-size: 12px; margin-top: 4px; }
    .low-stock { color: #c0392b; }
    .out-stock { color: #999; }

    /* ---------- EXTRAS ---------- */
    .rating-stars i { color: #f5a623; }
    .coupon-box {
      border: 1px dashed #198754;
      padding: 10px;
      border-radius: 6px;
      background: #f0fff7;
      font-size: 14px;
    }

    .review-card {
      border-bottom: 1px solid #eee;
      padding: 12px 0;
    }

    /* ---------- ZOOM MODAL ---------- */
    .modal-content { background:#000; }
    .zoom-container { overflow:hidden; }
    .zoom-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform .25s ease;
    }
  </style>
</head>

<body>

<%- include('./userPartials/navbar') %>

<div class="container py-4">

  <!-- BREADCRUMB -->
  <nav class="breadcrumb mb-4">
    <a class="breadcrumb-item text-decoration-none" href="/user/home">Home</a>

    <% if (category) { %>
      <a class="breadcrumb-item text-decoration-none"
         href="/user/products?category=<%= category.category_id %>">
        <%= category.name %>
      </a>
    <% } else { %>
      <a class="breadcrumb-item text-decoration-none" href="/user/products">
        Products
      </a>
    <% } %>

    <span class="breadcrumb-item active"><%= product.title %></span>
  </nav>

  <div class="row">
    <!-- LEFT : IMAGES -->
    <div class="col-lg-6">
      <div class="image-wrapper mb-3">
        <img id="mainImage" class="main-img">
      </div>
      <div id="thumbs" class="d-flex gap-2 mt-2"></div>
    </div>

    <!-- RIGHT : DETAILS -->
    <div class="col-lg-6">
      <h3><%= product.title %></h3>

      <div class="d-flex align-items-center mb-2 rating-stars">
        <% for(let i=1;i<=5;i++){ %>
          <i class="bi bi-star-fill"></i>
        <% } %>
        <span class="ms-2 text-muted">(4.6 / 5 ¬∑ 128 reviews)</span>
      </div>

      <div class="mb-3">
        <span class="text-decoration-line-through text-muted">
          ‚Çπ <%= product.regular_price %>
        </span>
        <span class="fs-4 fw-bold ms-2">
          ‚Çπ <%= product.sale_price %>
        </span>
      </div>

      <div class="coupon-box mb-3">
        üéâ Use code <strong>ATOM10</strong> & get <strong>10% OFF</strong><br>
        üí≥ Extra ‚Çπ200 off on prepaid orders
      </div>

      <h6>Color</h6>
      <div class="d-flex mb-3">
        <% colors.forEach(c => { %>
          <div class="option-box color-box" data-color="<%= c %>"><%= c %></div>
        <% }) %>
      </div>

      <h6>Size</h6>
      <div id="sizes" class="d-flex mb-4"></div>

      <button id="addToCartBtn"
        class="btn btn-success w-100 mb-2"
        <%= isOutOfStock ? 'disabled' : '' %>>
        ADD TO CART
      </button>

      <button class="btn btn-outline-dark w-100">
        ‚ù§Ô∏è MOVE TO WISHLIST
      </button>
    </div>
  </div>
</div>

<!-- REVIEWS -->
<div class="container pb-5">
  <h4 class="fw-semibold mb-3">Customer Reviews</h4>

  <div class="review-card">
    <strong>Rahul</strong>
    <div class="rating-stars">
      <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
      <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
      <i class="bi bi-star-fill"></i>
    </div>
    <p class="mb-0 text-muted">Quality is excellent. Fits perfectly!</p>
  </div>

  <div class="review-card">
    <strong>Anjali</strong>
    <div class="rating-stars">
      <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
      <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
      <i class="bi bi-star"></i>
    </div>
    <p class="mb-0 text-muted">Nice fabric but delivery was late.</p>
  </div>
</div>

<!-- RELATED PRODUCTS -->
<div class="container pb-5 mt-5">
  <h4 class="fw-semibold mb-4">Related Products</h4>

  <div class="row g-4">
    <% if (!relatedProducts.length) { %>
      <p class="text-muted">No related products found.</p>
    <% } %>

    <% relatedProducts.forEach(p => { %>
      <div class="col-lg-3 col-md-4 col-sm-6">
        <a href="/user/product/<%= p.product_id %>" class="text-decoration-none text-dark">
          <div class="card h-100 shadow-sm">
            <img src="/uploads/<%= p.thumbnail %>"
                 class="card-img-top"
                 style="aspect-ratio:5/7; object-fit:cover;">
            <div class="card-body">
              <h6><%= p.title %></h6>
              <span class="fw-semibold text-success">‚Çπ <%= p.sale_price %></span>
              <div class="text-muted small"><%= p.colorsCount %> colors</div>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</div>

<!-- ZOOM MODAL -->
<div class="modal fade" id="zoomModal">
  <div class="modal-dialog modal-fullscreen">
    <div class="modal-content">
      <button class="btn btn-light position-absolute top-0 end-0 m-3"
              data-bs-dismiss="modal">‚úï</button>

      <div class="d-flex align-items-center justify-content-center h-100">
        <button class="btn btn-light me-3" onclick="prev()">‚Äπ</button>
        <div class="zoom-container" id="zoomContainer">
          <img id="zoomImg" class="zoom-img">
        </div>
        <button class="btn btn-light ms-3" onclick="next()">‚Ä∫</button>
      </div>
    </div>
  </div>
</div>

<script>
  const colorMap = <%- JSON.stringify(colorMap) %>;
  let currentColor = "<%= defaultColor %>";
  let images = [];
  let currentIndex = 0;
  let scale = 1;
  let selectedVariant = null;

  function renderImages(color) {
    images = colorMap[color].images || [];
    if (!images.length) return;

    currentIndex = 0;
    mainImage.src = '/uploads/' + images[0];

    thumbs.innerHTML = images.map((img,i)=>
      `<img src="/uploads/${img}" class="thumb" onclick="setImage(${i})">`
    ).join('');
  }

  function renderSizes(color) {
    const sizeList = colorMap[color].sizes;

    sizes.innerHTML = sizeList.map(v => `
      <div class="option-box ${v.stock === 0 ? 'option-disabled' : ''}"
           data-variant="${v.variant_id}">
        ${v.size}
        <div class="stock-text ${v.stock === 0 ? 'out-stock' : 'low-stock'}">
          ${v.stock === 0
            ? 'Out of stock'
            : v.stock < 4 ? `Only ${v.stock} left` : ''}
        </div>
      </div>
    `).join('');
  }

  document.getElementById('sizes').addEventListener('click', e => {
    const box = e.target.closest('.option-box');
    if (!box || box.classList.contains('option-disabled')) return;

    document.querySelectorAll('#sizes .option-box')
      .forEach(b => b.classList.remove('option-active'));

    box.classList.add('option-active');
    selectedVariant = box.dataset.variant;
  });

  document.querySelectorAll('.color-box').forEach(b => {
    b.onclick = () => {
      document.querySelectorAll('.color-box')
        .forEach(x => x.classList.remove('option-active'));

      b.classList.add('option-active');
      currentColor = b.dataset.color;
      selectedVariant = null;
      renderImages(currentColor);
      renderSizes(currentColor);
    };
  });

  document.getElementById('addToCartBtn').onclick = () => {
    if (!selectedVariant) {
      alert('Please select size');
      return;
    }

    fetch('/user/cart/add', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        product_id: "<%= product.product_id %>",
        variant_id: selectedVariant
      })
    })
    .then(res => res.json())
    .then(data => {
      if (data.error) alert(data.error);
      else window.location.href = '/user/cart';
    });
  };

  function setImage(i){ currentIndex=i; mainImage.src='/uploads/'+images[i]; }

  document.querySelector(`[data-color="${currentColor}"]`)
    .classList.add('option-active');

  renderImages(currentColor);
  renderSizes(currentColor);
</script>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<%- include('./userPartials/footer') %>
</body>
</html>
