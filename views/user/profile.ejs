<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Account | ATOM</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      font-family: "Segoe UI", sans-serif;
      background: #fff;
      color: #111;
    }


    /* ================= ACCOUNT ================= */
    .account-wrapper {
      padding: 60px 0 80px;
    }

    .promo-card {
      background: #000;
      color: #fff;
      border-radius: 12px;
      padding: 22px;
      font-size: 14px;
    }

    .promo-card span {
      color: #5cff8d;
      font-weight: 600;
    }
    /* Profile */
    .profile-title {
      font-size: 28px;
      font-weight: 600;
      margin-bottom: 35px;
    }

    .form-label {
      font-size: 14px;
      color: #777;
      margin-bottom: 6px;
    }

    .profile-input {
      background: #fff5f5;
      border: none;
      padding: 15px 16px;
      border-radius: 10px;
      font-size: 15px;
    }

    .profile-input:focus {
      outline: none;
      box-shadow: none;
    }

    .btn-outline-success {
      border-radius: 12px;
      padding: 14px;
      font-weight: 500;
      font-size: 15px;
    }

 
  </style>
</head>

<body>

<!-- ================= HEADER ================= -->
<!-- NAVBAR -->
<%- include('./userPartials/navbar') %>

<!-- ================= ACCOUNT ================= -->
<div class="container account-wrapper">
  <div class="row">

    <!-- Sidebar -->
    <%- include('./userPartials/sidebar') %>
    <!-- Profile -->
    <div class="col-lg-9 col-md-8">
      <div class="profile-title">My Account</div>

      <div class="row g-4">
        <div class="col-md-6">
          <label class="form-label">First Name</label>
          <input class="profile-input w-100" readonly value="<%= user.first_name %>">
        </div>

        <div class="col-md-6">
          <label class="form-label">Last Name</label>
          <input class="profile-input w-100" readonly value="<%= user.last_name %>">
        </div>

        <div class="col-md-6">
          <label class="form-label">Email ID</label>
          <input class="profile-input w-100" readonly value="<%= user.email %>">
        </div>

        <div class="col-md-6">
          <label class="form-label">Phone Number</label>
          <input class="profile-input w-100" readonly value="<%= user.phone_number || 'Not added' %>">
        </div>

        <div class="col-md-6">
          <label class="form-label">Referral Code</label>
          <input class="profile-input w-100" readonly value="<%= user.referralCode || 'N/A' %>">
        </div>

        <div class="col-md-6">
          <label class="form-label">Default Address</label>
          <input class="profile-input w-100" readonly value="<%= defaultAddress %>">
        </div>
      </div>

      <div class="mt-5">
        <button class="btn btn-outline-success w-100 mb-3">Update Password</button>
        <button class="btn btn-outline-success w-100">Edit Profile</button>
      </div>
    </div>

  </div>
</div>

<!-- ================= FOOTER ================= -->
<%- include('./userPartials/footer') %>

</body>
</html>
