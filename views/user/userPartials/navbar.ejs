<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ATOM</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
    }

    .navbar {
      padding: 18px 0;
    }

    .navbar-brand img {
      height: 60px;
    }

    /* CENTER MENU */
    .nav-center {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
    }

    .nav-center .nav-link {
      font-weight: 500;
      letter-spacing: 0.5px;
      padding: 0 14px;
      white-space: nowrap;
    }

    /* SEARCH */
    .nav-search {
      width: 220px;
      border-radius: 20px;
      padding: 6px 14px;
    }

    /* RIGHT ICONS */
    .nav-icons a {
      color: #000;
      font-size: 18px;
    }

    /* MOBILE FIX */
    @media (max-width: 991px) {
      .nav-center {
        position: static;
        transform: none;
      }
    }
  </style>
</head>

<nav class="navbar navbar-expand-lg bg-white border-bottom">
  <div class="container position-relative">

    <!-- LOGO -->
    <a class="navbar-brand" href="/user/home">
      <img src="/uploads/Atom logo white bg with name.png" alt="ATOM" height="60">
    </a>

    <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#menu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="menu">

      <!-- CENTER MENU -->
      <ul class="navbar-nav nav-center">

        <!-- T-SHIRTS = ALL PRODUCTS -->
        <li class="nav-item">
          <a class="nav-link" href="/user/products">
            T-Shirts
          </a>
        </li>

        <!-- HOODIES (Hoodi in DB) -->
        <li class="nav-item">
          <a class="nav-link"
             href="/user/products?category=<%= navCategories.hoodiId %>">
            Hoodies
          </a>
        </li>

        <!-- POLOS -->
        <li class="nav-item">
          <a class="nav-link"
             href="/user/products?category=<%= navCategories.poloId %>">
            Polos
          </a>
        </li>

        <!-- OVERSIZED -->
        <li class="nav-item">
          <a class="nav-link"
             href="/user/products?category=<%= navCategories.oversizedId %>">
            Oversized
          </a>
        </li>

        <!-- WINTER COLLECTION = HOODI + SWEATSHIRT -->
        <li class="nav-item">
          <a class="nav-link"
             href="/user/products?category=<%= navCategories.hoodiId %>&category=<%= navCategories.sweatshirtId %>">
            Winter Collection
          </a>
        </li>

        <!-- SALE -->
        <li class="nav-item">
          <a class="nav-link text-success"
             href="/user/products?sale=true">
            Sale
          </a>
        </li>

      </ul>

      <!-- RIGHT -->
      <form class="d-flex align-items-center gap-3 ms-auto"
            method="GET"
            action="/user/products">

        <input
          type="text"
          name="search"
          class="form-control nav-search"
          placeholder="Search products">

        <a href="/user/profile"><i class="bi bi-person"></i></a>
        <a href="/user/cart"><i class="bi bi-bag"></i></a>
      </form>

    </div>
  </div>
</nav>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
