<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ATOM</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
    }

    .navbar {
      padding: 18px 0;
    }

    .navbar-brand img {
      height: 60px;
    }

    /* CENTER MENU */
    .nav-center {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
    }

    #searchSuggestions {
      top: calc(100% + 6px);
      z-index: 9999;  
      background: #fff;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 8px 20px rgba(0,0,0,0.12);
    }

    #searchSuggestions .list-group-item {
      cursor: pointer;
      border: none;
      padding: 10px 14px;
    }

    #searchSuggestions .list-group-item:hover {
      background: #f5f5f5;
    }

    .nav-center .nav-link {
      font-weight: 500;
      letter-spacing: 0.5px;
      padding: 0 14px;
      white-space: nowrap;
    }

    /* SEARCH */
    .nav-search-wrapper {
      position: relative;
      width: 280px;  
    }

    .nav-search {
      width: 280px;
      border-radius: 20px;
      padding: 6px 36px 6px 14px;
    }

    .search-btn {
      position: absolute;
      top: 50%;
      right: 10px;
      transform: translateY(-50%);
      background: none;
      border: none;
      color: #666;
      font-size: 16px;
      cursor: pointer;
    }

    .suggestion-img {
    width: 40px;
    height: 40px;
    object-fit: contain;
    border-radius: 6px;
    background: #f8f8f8;
  }

    #searchSuggestions {
    max-height: 320px; 
    overflow-y: auto;
    right: 0;        
    left: auto;               
  }

    .search-btn:hover {
      color: #000;
    }
    
    .suggestion-img {
      width: 36px;
      height: 36px;
    }

    /* MOBILE FIX */
    @media (max-width: 991px) {
      .nav-center {
        position: static;
        transform: none;
      }
    }
  </style>
</head>

<nav class="navbar navbar-expand-lg bg-white border-bottom">
  <div class="container position-relative">

    <!-- LOGO -->
    <a class="navbar-brand" href="/user/home">
      <img src="/uploads/Atom logo white bg with name.png" alt="ATOM">
    </a>

    <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#menu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="menu">

      <!-- CENTER MENU -->
      <ul class="navbar-nav nav-center">
        <li class="nav-item"><a class="nav-link" href="/user/products">T-Shirts</a></li>
        <li class="nav-item">
          <a class="nav-link" href="/user/products?category=<%= navCategories.hoodiId %>">Hoodies</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/products?category=<%= navCategories.poloId %>">Polos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/products?category=<%= navCategories.oversizedId %>">Oversized</a>
        </li>
        <li class="nav-item">
          <a class="nav-link"
             href="/user/products?category=<%= navCategories.hoodiId %>&category=<%= navCategories.sweatshirtId %>">
            Winter Collection
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-success" href="/user/products?sale=true">Sale</a>
        </li>
      </ul>

      <!-- RIGHT -->
      <form class="d-flex align-items-center gap-3 ms-auto"
      method="GET"
      action="/user/products">

  <!-- Preserve filters ONLY if they exist -->
  <% if (typeof category !== 'undefined') { %>
    <% category.forEach(c => { %>
      <input type="hidden" name="category" value="<%= c %>">
    <% }) %>
  <% } %>

  <% if (typeof size !== 'undefined') { %>
    <% size.forEach(s => { %>
      <input type="hidden" name="size" value="<%= s %>">
    <% }) %>
  <% } %>

  <% if (typeof color !== 'undefined') { %>
    <% color.forEach(c => { %>
      <input type="hidden" name="color" value="<%= c %>">
    <% }) %>
  <% } %>

  <% if (typeof sort !== 'undefined' && sort) { %>
    <input type="hidden" name="sort" value="<%= sort %>">
  <% } %>

  <!-- SEARCH -->
  <div class="nav-search-wrapper">

 <input
  type="text"
  name="search"
  id="searchInput"
  class="form-control nav-search"
  placeholder="Search products"
  autocomplete="off"
  value="<%= typeof search !== 'undefined' ? search : '' %>"
>

  <% if (typeof search !== 'undefined' && search) { %>
    <!-- Clear search button -->
    <button
      type="button"
      class="search-btn"
      onclick="clearSearch(this.form)"
      title="Clear search">
        <i class="bi bi-x-circle"></i>
    </button>
  <% } else { %>
    <!-- Normal search button -->
    <button type="submit" class="search-btn" aria-label="Search">
      <i class="bi bi-search"></i>
    </button>
  <% } %>
  <div id="searchSuggestions"
       class="list-group position-absolute w-100" style="display: none;"></div>

</div>

  <a href="/user/profile"><i class="bi bi-person"></i></a>
  <a href="/user/cart"><i class="bi bi-bag"></i></a>
</form>


    </div>
  </div>
</nav>
<script>
  function clearSearch(form) {
  const input = form.querySelector('input[name="search"]');
  const suggestions = document.getElementById('searchSuggestions');

  if (input) input.value = '';
  if (suggestions) suggestions.innerHTML = '';

  form.submit();
}
</script>
<script>
const input = document.getElementById('searchInput');
const suggestionsBox = document.getElementById('searchSuggestions');
let controller;

input.addEventListener('input', async () => {
  const query = input.value.trim();

  if (query.length < 2) {
    suggestionsBox.innerHTML = '';
    suggestionsBox.style.display = 'none';
    return;
  }
  suggestionsBox.style.display = 'block';

  if (controller) controller.abort();
  controller = new AbortController();

  try {
    const params = new URLSearchParams({
        q: query
      });

      // const categoryInput = document.querySelector('input[name="category"]');
      // if (categoryInput) {
      //   params.append('category', categoryInput.value);
      // }

    const res = await fetch(
      `/user/search-suggestions?${params.toString()}`,
      { signal: controller.signal }
    );

    const suggestions = await res.json();
    suggestionsBox.innerHTML = '';

    suggestions.forEach(item => {
      const row = document.createElement('button');
      row.type = 'button';
      row.className = 'list-group-item list-group-item-action d-flex gap-3 align-items-center';

      row.innerHTML = `
        <img src="${item.image}" class="suggestion-img" alt="">
        <div class="text-start">
          <div class="fw-semibold text-truncate">${item.name}</div>
          <small class="text-muted">${item.category}</small>
        </div>
      `;

      row.onclick = () => {
        window.location.href = `/user/product/${item.id}`;
      };

      suggestionsBox.appendChild(row);
    });
    const fallback = document.createElement('button');
    fallback.type = 'button';
    fallback.className =
      'list-group-item list-group-item-action text-center text-muted';

    fallback.innerHTML = `
      <div class="fw-semibold">Can’t find what you’re looking?</div>
      <small>View all results</small>
    `;

    fallback.onclick = () => {
      const searchValue = input.value.trim();
      window.location.href = `/user/products?search=${encodeURIComponent(searchValue)}`;
    };

    suggestionsBox.appendChild(fallback);



  } catch (err) {
    // silent fail
  }
});

// close suggestions when clicking outside
  document.addEventListener('click', (e) => {
    if (!e.target.closest('.nav-search-wrapper')) {
      suggestionsBox.innerHTML = '';
      suggestionsBox.style.display = 'none';
    }
  });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>