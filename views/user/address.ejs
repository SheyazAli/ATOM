<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Addresses | ATOM</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      font-family: "Segoe UI", sans-serif;
      background: #fff;
      color: #111;
    }

    /* ================= ACCOUNT/ADDRESS ================= */
    .account-wrapper {
      padding: 60px 0 80px;
    }

    .address-card {
      background: #fff5f5;
      border-radius: 12px;
      padding: 20px;
      transition: box-shadow 0.3s ease;
    }

    .address-card:hover {
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    .address-card p {
      margin-bottom: 6px;
      font-size: 15px;
    }

    .address-card .badge {
      font-size: 0.85rem;
      padding: 0.4em 0.6em;
      border-radius: 10px;
    }

    .page-title {
      font-size: 28px;
      font-weight: 600;
      margin-bottom: 35px;
    }

    .btn-outline-success {
      border-radius: 12px;
      padding: 10px 20px;
      font-weight: 500;
      font-size: 15px;
    }

    .action-buttons a {
      font-size: 14px;
      padding: 6px 12px;
      border-radius: 10px;
    }
  </style>
</head>

<body>

<!-- ================= HEADER ================= -->
<%- include('./userPartials/navbar') %>

<!-- ================= ACCOUNT/ADDRESS ================= -->
<div class="container account-wrapper">
  <div class="row">

    <!-- Sidebar -->
    <%- include('./userPartials/sidebar') %>

    <!-- Addresses -->
    <div class="col-lg-9 col-md-8">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="page-title">My Addresses</div>
        <a href="/user/address/add" class="btn btn-outline-success">+ Add Address</a>
      </div>
      <% if (!addresses || addresses.length === 0) { %>
        <p class="text-muted">No addresses found.</p>
      <% } else { %>
        <div class="row g-4">
          <% addresses.forEach(addr => { %>
            <div class="col-md-6">
              <div class="address-card h-100">
                <p class="fw-bold mb-1"><%= addr.first_name %> <%= addr.last_name %></p>
                <p class="mb-1"><%= addr.address_line_1 %></p>
                <% if (addr.address_line_2) { %>
                  <p class="mb-1"><%= addr.address_line_2 %></p>
                <% } %>
                <p class="mb-1"><%= addr.city %>, <%= addr.state %></p>
                <p class="mb-1"><%= addr.country %> - <%= addr.postal_code %></p>
                <% if (addr.is_default) { %>
                  <span class="badge bg-success">Default</span>
                <% } %>
                <div class="mt-3 action-buttons">
                  <a 
                    href="/user/address/<%= addr._id %>/edit"
                    class="btn btn-outline-success btn-sm">
                    Edit
                    </a>
                    <button 
                        class="btn btn-outline-danger btn-sm"
                        onclick="confirmDelete('<%= addr._id %>')">
                        Delete
                        </button>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>

  </div>
</div>

<!-- ================= FOOTER ================= -->
<%- include('./userPartials/footer') %>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


<script>
  function confirmDelete(addressId) {
    Swal.fire({
      title: 'Are you sure?',
      text: "This address will be permanently deleted!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#d33',
      cancelButtonColor: '#3085d6',
      confirmButtonText: 'Yes, delete it'
    }).then((result) => {
      if (result.isConfirmed) {
        deleteAddress(addressId);
      }
    });
  }

  function deleteAddress(addressId) {
    fetch(`/user/address/${addressId}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(res => res.json())
    .then(data => {
      if (data.success) {
        Swal.fire(
          'Deleted!',
          'Address has been deleted.',
          'success'
        ).then(() => {
          location.reload(); 
        });
      } else {
        Swal.fire('Error', data.message, 'error');
      }
    })
    .catch(err => {
      Swal.fire('Error', 'Something went wrong', 'error');
    });
  }
</script>
