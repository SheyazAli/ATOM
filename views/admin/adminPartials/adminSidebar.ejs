<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  <style>
    /* SIDEBAR WRAPPER */
    .sidebar {
      width: 250px;
      height: 100vh;
      background: #ffffff;
      padding: 25px;
      border-right: 1px solid #e6e6e6;
      position: fixed;
      top: 0;
      left: 0;
      font-family: "Inter", sans-serif;
      z-index: 100;
    }

    /* LOGO */
    .sidebar .logo {
      font-size: 26px;
      font-weight: 700;
      color: #6cb668;
      letter-spacing: 1px;
    }

    /* MENU ITEMS */
    .menu-item {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 15px;
      border-radius: 10px;
      margin-bottom: 10px;
      cursor: pointer;
      color: #333;
      text-decoration: none;
      transition: all 0.2s ease;
      font-weight: 500;
    }

    .menu-item i {
      font-size: 18px;
    }

    /* HOVER */
    .menu-item:hover {
      background: #f0f4e9;
      color: #2f6f2b;
    }

    /* ACTIVE STATE */
    .menu-item.active {
      background: #eef3e3;
      color: #2f6f2b;
      font-weight: 600;
    }

    .menu-item.active i {
      color: #2f6f2b;
    }

    /* LOGOUT */
    .logout {
      margin-top: 30px;
      border-top: 1px solid #eee;
      padding-top: 20px;
    }
  </style>
</head>

<body>

<!-- SIDEBAR -->
<div class="sidebar">

  <!-- LOGO -->
  <div class="logo mb-1">ATOM</div>
  <small class="text-muted">Admin Panel</small>

  <!-- MENU -->
  <div class="mt-4">

    <a href="/admin/products"
       class="menu-item <%= currentPage === 'products' ? 'active' : '' %>">
      <i class="bi bi-box"></i>
      Products
    </a>

    <a href="/admin/orders"
       class="menu-item <%= currentPage === 'orders' ? 'active' : '' %>">
      <i class="bi bi-cart"></i>
      Orders
    </a>

    <a href="/admin/categories"
       class="menu-item <%= currentPage === 'categories' ? 'active' : '' %>">
      <i class="bi bi-folder"></i>
      Categories
    </a>

    <a href="/admin/inventory"
       class="menu-item <%= currentPage === 'inventory' ? 'active' : '' %>">
      <i class="bi bi-bar-chart"></i>
      Inventory
    </a>

    <a href="/admin/users"
       class="menu-item <%= currentPage === 'users' ? 'active' : '' %>">
      <i class="bi bi-people"></i>
      Users
    </a>

    <a href="/admin/coupons"
       class="menu-item <%= currentPage === 'coupons' ? 'active' : '' %>">
      <i class="bi bi-tag"></i>
      Coupons
    </a>

    <a href="/admin/revenue"
       class="menu-item <%= currentPage === 'revenue' ? 'active' : '' %>">
      <i class="bi bi-graph-up-arrow"></i>
      Revenue
    </a>

  </div>

  <!-- LOGOUT -->
  <div class="logout">
    <a href="/admin/logout" class="menu-item text-danger">
      <i class="bi bi-box-arrow-right"></i>
      Logout
    </a>
  </div>

</div>

</body>
</html>
