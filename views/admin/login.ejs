<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Login - ATOM</title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    /* Page background */
    body {
      background-color: #2e6455;
    }

    /* Left side logo */
    .logo {
      width: 320px;
    }
.form-control {
  padding: 10px 12px;
  border-radius: 8px;
}

.form-control:focus {
  border-color: #2e6455;
  box-shadow: 0 0 0 0.15rem rgba(46, 100, 85, 0.25);
}

    /* Login box styling */
    .login-box {
      width: 380px;
      height: 500px;
      margin-top: 120px;
      background: #ffffff;
      border-radius: 20px;
    }

    /* Text green */
    .text-green {
      color: #2e6455;
    }

    /* Button styling */
    .btn-green {
      background-color: #2e6455;
      color: #fff;
      padding: 10px 0;
      border-radius: 8px;
    }

    .btn-green:hover {
      background-color: #255645;
    }
  </style>
</head>

<body>
  <div class="container-fluid vh-100 d-flex justify-content-center align-items-center">
    <div class="row w-100 h-100">

      <!-- LEFT SECTION -->
      <div class="col-md-6 d-flex justify-content-center align-items-center flex-column text-white">
        <img src="/uploads/ATOM_New_logo-removebg-preview.png" alt="ATOM Logo" class="logo mb-3">
      </div>

      <!-- RIGHT SECTION -->
      <div class="login-box p-5 shadow">

  <h3 class="text-center text-green fw-bold mb-1">ATOM</h3>
  <p class="text-center text-muted mb-4">Admin Login Panel</p>

  <form action="/admin/login" method="POST">

    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger text-center py-1">
        <%= error %>
      </div>
    <% } %>

    <!-- Email -->
    <div class="mb-3">
      <label class="form-label fw-semibold">Email</label>
      <input 
        type="email" 
        name="email" 
        class="form-control"
        placeholder="Enter admin email"
      >
    </div>

    <!-- Password -->
    <div class="mb-4">
      <label class="form-label fw-semibold">Password</label>
      <input 
        type="password" 
        name="password" 
        class="form-control"
        placeholder="Enter password"

      >
    </div>

    <!-- Login Button -->
    <button type="submit" class="btn btn-green w-100 mb-3">
      Login
    </button>

  </form>

  <p class="text-center mb-0">
    <a href="/" class="fw-semibold text-dark text-decoration-none">
      Go To Homepage
    </a>
  </p>

</div>


    </div>
  </div>
</body>
</html>

