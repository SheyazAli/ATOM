<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Add Product | ATOM</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Cropper -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.css" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js"></script>

  <style>
    body { background:#f6eeec; font-family:Inter,sans-serif; }
    .content { margin-left:250px; padding:40px; }
    .card-box { background:#fff; border-radius:14px; padding:20px; margin-bottom:20px; }
    .variant-row { background:#faf7f6; padding:15px; border-radius:10px; margin-bottom:15px; }
    .add-variant { cursor:pointer; color:#e0553f; font-weight:500; }
    .save-btn { background:#e0553f; color:white; border:none; padding:12px; border-radius:10px; }
    small.hint { font-size:12px; color:#6c757d; }
    #cropPreview { max-width:300px; display:none; margin-top:10px; }
  </style>
</head>

<body>

<%- include('./adminPartials/adminSidebar') %>

<div class="content">
  <h3 class="fw-bold mb-4">Add Product</h3>

  <form id="productForm" action="/admin/products" method="POST" enctype="multipart/form-data">

    <!-- BASIC INFO -->
    <div class="card-box">
      <h6 class="fw-semibold mb-3">Basic Information</h6>

      <input class="form-control mb-3" name="title" placeholder="Product title" required>
      <textarea class="form-control mb-3" name="description" placeholder="Description" required></textarea>

      <select name="category_id" class="form-select" required>
        <option value="">Select category</option>
        <% categories.forEach(c => { %>
          <option value="<%= c.category_id %>"><%= c.name %></option>
        <% }) %>
      </select>
    </div>

    <!-- THUMBNAIL -->
    <div class="card-box">
      <h6 class="fw-semibold mb-3">Product Thumbnail</h6>

      <input type="file" id="thumbnailInput" name="thumbnail"
             class="form-control" accept="image/*" required>

      <img id="cropPreview">
      <small class="hint">Crop before upload (1:1)</small>
    </div>

    <!-- PRICING -->
    <div class="card-box">
      <h6 class="fw-semibold mb-3">Pricing</h6>
      <div class="row">
        <div class="col-md-6">
          <input class="form-control" name="regular_price" type="number" min="1" required>
        </div>
        <div class="col-md-6">
          <input class="form-control" name="sale_price" type="number" min="1">
        </div>
      </div>
    </div>

    <!-- VARIANTS -->
    <div class="card-box">
      <div class="d-flex justify-content-between mb-3">
        <h6 class="fw-semibold">Variants (Color wise)</h6>
        <span class="add-variant" onclick="addColorVariant()">
          <i class="bi bi-plus-circle"></i> Add Color
        </span>
      </div>

      <div id="variantContainer"></div>
    </div>

    <!-- STATUS -->
    <div class="card-box">
      <div class="form-check mb-3">
        <input type="checkbox" name="status" class="form-check-input" checked>
        <label class="form-check-label">Set Active</label>
      </div>

      <button class="save-btn w-100">Save Product</button>
    </div>

  </form>
</div>

<script>
/* ---------------- VARIANTS ---------------- */

let variantIndex = 0;
const sizes = ['Small','Medium','Large','X-Large'];
const colors = ['Black','White','Yellow','Green','Red','Pink','Brown','Grey','Purple','Blue','Orange'];
const MIN_IMAGES = 3;
const MAX_IMAGES = 5;

function addColorVariant() {
  const container = document.getElementById('variantContainer');
  const div = document.createElement('div');
  div.className = 'variant-row';

  div.innerHTML = `
    <div class="row g-2 mb-2">
      <div class="col-md-3">
        <select name="variants[${variantIndex}][color]" class="form-select" required>
          ${colors.map(c=>`<option value="${c}">${c}</option>`).join('')}
        </select>
      </div>

      <div class="col-md-5">
        <input type="file"
        name="variants[${variantIndex}][images]"
        class="form-control variant-images"
        accept="image/*"
        multiple>
        <div class="variant-preview d-flex gap-2 mt-2 flex-wrap"></div>
        <small class="hint">Min 3, Max 5 images</small>
      </div>
    </div>

    ${sizes.map(s => `
      <div class="row g-2 mb-1">
        <div class="col-md-3">
          <input class="form-control" value="${s}" disabled>
          <input type="hidden" name="variants[${variantIndex}][sizes][${s}][size]" value="${s}">
        </div>
        <div class="col-md-3">
          <input type="number"
              name="variants[${variantIndex}][sizes][${s}][stock]"
              class="form-control"
              min="0"
              required>
        </div>
      </div>
    `).join('')}
  `;

  container.appendChild(div);
  variantIndex++;
}

addColorVariant();

/* ---------------- IMAGE COUNT VALIDATION ---------------- */
const variantCrops = new Map();

document.addEventListener('change', e => {
  if (!e.target.classList.contains('variant-images')) return;

  const preview = e.target.nextElementSibling;

  if (!variantCrops.has(e.target)) {
    variantCrops.set(e.target, []);
  }

  [...e.target.files].forEach(file => {
    if (variantCrops.get(e.target).length >= MAX_IMAGES) return;

    const imgWrap = document.createElement('div');
    imgWrap.style.position = 'relative';

    const img = document.createElement('img');
    img.style.width = '120px';
    imgWrap.appendChild(img);

    const btn = document.createElement('span');
    btn.innerHTML = '×';
    btn.style.cssText =
      'position:absolute;top:2px;right:6px;cursor:pointer;color:white;background:black;border-radius:50%;padding:0 6px;';
    imgWrap.appendChild(btn);

    preview.appendChild(imgWrap);

    const reader = new FileReader();
    reader.onload = () => {
      img.src = reader.result;

      const cropper = new Cropper(img, {
        aspectRatio: 2 / 3,
        viewMode: 1,
        autoCropArea: 1
      });

      btn.onclick = () => {
        cropper.destroy();
        imgWrap.remove();
        variantCrops.set(
          e.target,
          variantCrops.get(e.target).filter(c => c !== cropper)
        );
      };

      variantCrops.get(e.target).push(cropper);
    };

    reader.readAsDataURL(file);
  });

  // allow re-selecting same file later
  e.target.value = '';
});

document.addEventListener('change', e => {
  if (!e.target.classList.contains('variant-images')) return;

  const count = e.target.files.length;

  if (count > MAX_IMAGES) {
    alert(`Maximum ${MAX_IMAGES} images allowed per color`);
    e.target.value = '';
  }
});

/* ---------------- THUMBNAIL CROPPER ---------------- */

let cropper;
const thumbInput = document.getElementById('thumbnailInput');
const preview = document.getElementById('cropPreview');

thumbInput.addEventListener('change', e => {
  const file = e.target.files[0];
  if (!file) return;

  const reader = new FileReader();
  reader.onload = () => {
    preview.src = reader.result;
    preview.style.display = 'block';

    if (cropper) cropper.destroy();
    cropper = new Cropper(preview, {
      aspectRatio: 1,
      viewMode: 1,
      autoCropArea: 1
    });
  };
  reader.readAsDataURL(file);
});


/* ---------------- FORM SUBMIT ---------------- */

document.getElementById('productForm').addEventListener('submit', async e => {
  if (!e.target.checkValidity()) {
  e.target.reportValidity(); 
  return;
}

  e.preventDefault();

  // validate variant images
  for (const input of document.querySelectorAll('.variant-images')) {
    const croppers = variantCrops.get(input) || [];

    if (croppers.length < 3 || croppers.length > 5) {
      Swal.fire('Error', 'Each color needs 3–5 images', 'error');
      return;
    }

    const dt = new DataTransfer();
    for (const cropper of croppers) {
      const canvas = cropper.getCroppedCanvas({ width:800, height:1200 });
      const blob = await new Promise(r => canvas.toBlob(r, 'image/jpeg', 0.9));
      dt.items.add(new File([blob], 'variant.jpg', { type:'image/jpeg' }));
    }
    input.files = dt.files;
  }

  if (!cropper) {
    Swal.fire('Error', 'Please crop thumbnail image', 'error');
    return;
  }

  const canvas = cropper.getCroppedCanvas({ width:600, height:600 });
  const blob = await new Promise(r => canvas.toBlob(r, 'image/jpeg', 0.9));
  const dt = new DataTransfer();
  dt.items.add(new File([blob], 'thumbnail.jpg', { type:'image/jpeg' }));
  thumbInput.files = dt.files;

  e.target.submit();
});

</script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>
