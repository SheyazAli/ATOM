<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Products | Admin Panel</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  <style>
    body {
      background: #f2e5e2;
      font-family: "Inter", sans-serif;
    }

    .content {
      margin-left: 250px;
      padding: 40px;
    }

    .search-box {
      background: #ded6d3;
      border-radius: 12px;
      padding: 10px 15px;
      border: none;
    }

    .table-card {
      background: #fff;
      border-radius: 18px;
      padding: 25px 30px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    }

    .add-btn {
      background: #e0553f;
      color: white;
      border-radius: 10px;
      padding: 10px 18px;
      border: none;
      text-decoration: none;
    }

    .product-img {
      width: 42px;
      height: 42px;
      border-radius: 8px;
      object-fit: cover;
      background: #f3f3f3;
    }

    .status-badge {
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 12px;
    }
  </style>
</head>

<body>

<%- include('./adminPartials/adminSidebar') %>

<div class="content">

  <!-- HEADER -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Products</h2>
    <a href="/admin/products/add" class="add-btn">
      <i class="bi bi-plus-lg"></i> Add Product
    </a>
  </div>

  <!-- SEARCH -->
  <div class="d-flex gap-2 mb-4 w-75">
    <input
      type="text"
      id="searchInput"
      class="form-control search-box"
      placeholder="ðŸ” Search products..."
      value="<%= search %>"
      onkeydown="if(event.key==='Enter') searchProduct()"
    >

    <button
      class="btn btn-dark px-4"
      onclick="searchProduct()"
    >
      Search
    </button>

    <button
      class="btn btn-outline-secondary px-4"
      onclick="clearSearch()"
    >
      Clear
    </button>
  </div>

  <!-- TABLE -->
  <div class="table-card">
    <table class="table table-borderless align-middle">
      <thead class="fw-semibold">
        <tr>
          <th>#</th>
          <th>Product</th>
          <th>Category</th>
          <th>Price</th>
          <th>Stock</th>
          <th>Status</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% if (products.length === 0) { %>
          <tr>
            <td colspan="7" class="text-center text-muted">
              No products found
            </td>
          </tr>
        <% } %>

        <% products.forEach((product, index) => { %>
          <tr>

            <td><%= index + 1 %></td>

            <td class="d-flex align-items-center gap-3">
              <img
                src="/uploads/<%= product.thumbnail %>"
                class="product-img"
                alt="<%= product.title %>"
                onerror="this.onerror=null;this.src='/uploads/products/default-product.png';"
              >
              <span class="fw-semibold"><%= product.title %></span>
            </td>

            <td><%= product.category_name %></td>

            <td>â‚¹ <%= product.sale_price || product.regular_price %></td>

            <td><%= product.totalStock %></td>

            <td>
              <span class="status-badge <%= product.status ? 'bg-success text-white' : 'bg-secondary text-white' %>">
                <%= product.status ? 'Active' : 'Unlisted' %>
              </span>
            </td>

            <td class="text-center d-flex gap-2 justify-content-center">

              <div class="form-check form-switch">
                <input
                  class="form-check-input"
                  type="checkbox"
                  <%= product.status ? 'checked' : '' %>
                  onchange="toggleProductStatus('<%= product.product_id %>', this.checked)"
                >
              </div>

              <a
                href="/admin/products/<%= product.product_id %>/edit"
                class="btn btn-sm btn-outline-primary"
                title="Edit"
              >
                <i class="bi bi-pencil"></i>
              </a>

              <button
                class="btn btn-sm btn-outline-danger"
                title="Delete"
                onclick="deleteProduct('<%= product.product_id %>')"
              >
                <i class="bi bi-trash"></i>
              </button>

            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- PAGINATION -->
    <nav class="d-flex justify-content-between align-items-center mt-4">
      <span class="text-muted">
        Page <%= currentPageNum %> of <%= totalPages %>
      </span>

      <ul class="pagination mb-0">
        <li class="page-item <%= currentPageNum === 1 ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= currentPageNum - 1 %>&search=<%= search %>">Previous</a>
        </li>

        <li class="page-item <%= currentPageNum === totalPages ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= currentPageNum + 1 %>&search=<%= search %>">Next</a>
        </li>
      </ul>
    </nav>

  </div>
</div>

<script>
function searchProduct() {
  const value = document.getElementById('searchInput').value.trim();
  window.location.href = value
    ? `/admin/products?search=${encodeURIComponent(value)}`
    : '/admin/products';
}

function clearSearch() {
  window.location.href = '/admin/products';
}

function toggleProductStatus(productId, newStatus) {

  Swal.fire({
    title: newStatus ? 'Activate product?' : 'Unlist product?',
    text: 'Are you sure you want to change the product status?',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonText: 'Yes',
    cancelButtonText: 'Cancel'
  }).then(result => {

    if (!result.isConfirmed) {
      event.target.checked = !newStatus;
      return;
    }

    fetch(`/admin/products/${productId}/status`, {
      method: 'PATCH',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ status: newStatus })
    })
    .then(res => res.json())
    .then(data => {
      if (!data.success) {
        Swal.fire('Error', 'Failed to update status', 'error');
        event.target.checked = !newStatus;
      } else {
        Swal.fire({
          toast: true,
          position: 'top-end',
          icon: 'success',
          title: 'Status updated',
          showConfirmButton: false,
          timer: 1500
        });
      }
    })
    .catch(() => {
      Swal.fire('Error', 'Server error', 'error');
      event.target.checked = !newStatus;
    });
  });
}

function deleteProduct(productId) {
  Swal.fire({
    title: 'Delete product?',
    text: 'This will permanently delete the product',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#d33',
    confirmButtonText: 'Delete'
  }).then(result => {
    if (result.isConfirmed) {
      fetch(`/admin/products/${productId}`, { method: 'DELETE' })
        .then(() => location.reload());
    }
  });
}
</script>

</body>
</html>
