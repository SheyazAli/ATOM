<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Products | Admin Panel</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  <style>
    body {
      background: #f2e5e2;
      font-family: "Inter", sans-serif;
    }

    .content {
      margin-left: 250px;
      padding: 40px;
    }

    .search-box {
      background: #ded6d3;
      border-radius: 12px;
      padding: 10px 15px;
      border: none;
    }

    .table-card {
      background: #fff;
      border-radius: 18px;
      padding: 25px 30px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    }

    .add-btn {
      background: #e0553f;
      color: white;
      border-radius: 10px;
      padding: 10px 18px;
      border: none;
    }

    .status-badge {
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 12px;
    }

    .product-img {
      width: 42px;
      height: 42px;
      border-radius: 8px;
      object-fit: cover;
    }

    .action-icons i {
      cursor: pointer;
      margin: 0 6px;
    }
  </style>
</head>
<body>

<!-- SIDEBAR -->
<%- include('./adminPartials/adminSidebar') %>

<!-- CONTENT -->
<div class="content">

  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Products</h2>
    <a href="/admin/products/add" class="add-btn">
      <i class="bi bi-plus-lg"></i> Add Product
    </a>
  </div>

  <!-- Search & Filter -->
  <div class="d-flex gap-3 mb-4">
    <input
      type="text"
      class="form-control search-box w-50"
      placeholder="ðŸ” Search products..."
      value="<%= search %>"
    />

    <select class="form-select w-25">
      <option>All Categories</option>
      <% categories.forEach(cat => { %>
        <option value="<%= cat.category_id %>"><%= cat.name %></option>
      <% }) %>
    </select>
  </div>

  <!-- Table -->
  <div class="table-card">
    <table class="table table-borderless align-middle">
      <thead class="fw-semibold">
        <tr>
          <th><input type="checkbox"></th>
          <th>Product</th>
          <th>Category</th>
          <th>Price</th>
          <th>Stock</th>
          <th>Status</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% if (products.length === 0) { %>
          <tr>
            <td colspan="7" class="text-center text-muted">No products found</td>
          </tr>
        <% } %>

        <% products.forEach(product => { %>
          <tr>
            <td><input type="checkbox"></td>

            <td class="d-flex align-items-center gap-3">
              <img src="<%= product.thumbnail %>" class="product-img">
              <div>
                <div class="fw-semibold"><%= product.title %></div>
              </div>
            </td>

            <td><%= product.category_name %></td>

            <td>â‚¹ <%= product.sale_price || product.regular_price %></td>

            <td><%= product.totalStock %></td>

            <td>
              <span class="status-badge
                <%= product.status ? 'bg-success text-white' : 'bg-secondary text-white' %>">
                <%= product.status ? 'Active' : 'Unlisted' %>
              </span>
            </td>

            <td class="text-center action-icons">
              <i class="bi bi-eye" title="View"></i>
              <i class="bi bi-pencil-square text-primary"
                 onclick="editProduct('<%= product.product_id %>')"></i>
              <i class="bi bi-trash text-danger"
                 onclick="deleteProduct('<%= product.product_id %>')"></i>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Pagination -->
    <nav class="d-flex justify-content-between align-items-center mt-4">
      <span class="text-muted">Page <%= currentPage %> of <%= totalPages %></span>

      <ul class="pagination mb-0">
        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
        </li>

        <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
        </li>
      </ul>
    </nav>

  </div>
</div>

<!-- Scripts -->
<script>
function editProduct(id) {
  window.location.href = `/admin/products/${id}/edit`;
}

function deleteProduct(id) {
  Swal.fire({
    title: 'Delete product?',
    text: 'This action cannot be undone',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#d33',
    confirmButtonText: 'Delete'
  }).then(result => {
    if (result.isConfirmed) {
      fetch(`/admin/products/${id}`, { method: 'DELETE' })
        .then(() => location.reload());
    }
  });
}
</script>

</body>
</html>
