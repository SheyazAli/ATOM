<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Categories | Admin Panel</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  <style>
    body {
      background: #f2e5e2;
      font-family: "Inter", sans-serif;
    }

    .content {
      margin-left: 250px;
      padding: 40px;
    }

    .search-box {
      background: #ded6d3;
      border-radius: 12px;
      padding: 10px 15px;
      border: none;
    }

    .table-card {
      background: white;
      border-radius: 18px;
      padding: 25px 35px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .add-btn {
      background: #e0553f;
      color: white;
      padding: 10px 18px;
      border-radius: 10px;
      text-decoration: none;
    }

    .featured-switch .form-check-input {
      width: 42px;
      height: 22px;
      cursor: pointer;
    }
  </style>
</head>

<body>

<!-- SIDEBAR -->
<%- include('./adminPartials/adminSidebar') %>

<div class="content">

  <!-- HEADER -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Categories</h2>
    <a href="/admin/categories/add" class="add-btn">
      <i class="bi bi-plus-lg"></i> Add Category
    </a>
  </div>

  <!-- SEARCH -->
<div class="mb-4 w-75 d-flex gap-2">
  <input
    type="text"
    id="searchInput"
    class="form-control search-box"
    placeholder="ðŸ” Search category..."
    value="<%= search %>"
    onkeydown="if(event.key==='Enter') searchCategory()"
  >

  <button
    class="btn btn-dark px-4"
    onclick="searchCategory()"
  >
    Search
  </button>

  <button
    class="btn btn-outline-secondary px-4"
    onclick="clearSearch()"
  >
    Clear
  </button>
</div>

  <!-- TABLE -->
  <div class="table-card">
    <table class="table table-borderless align-middle">
      <thead class="fw-semibold">
        <tr>
          <th>Category Name</th>
          <th>Products</th>
          <th class="text-center">Featured</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% if (categories.length === 0) { %>
          <tr>
            <td colspan="4" class="text-center text-muted">
              No categories found
            </td>
          </tr>
        <% } %>

        <% categories.forEach(cat => { %>
          <tr>
            <td class="fw-semibold"><%= cat.name %></td>
            <td><%= cat.productCount %></td>

            <!-- FEATURED TOGGLE -->
            <td class="text-center featured-switch">
              <div class="form-check form-switch d-inline-flex">
                <input
                  class="form-check-input"
                  type="checkbox"
                  <%= cat.featured ? 'checked' : '' %>
                  onchange="toggleFeatured('<%= cat._id %>', this.checked)"
                >
              </div>
            </td>

            <!-- ACTIONS -->
            <td class="text-center">
              <a
                href="/admin/categories/<%= cat.category_id %>/edit"
                class="btn btn-sm btn-outline-primary me-2"
              >
                <i class="bi bi-pencil"></i>
              </a>

              <button
                class="btn btn-sm btn-outline-danger"
                onclick="deleteCategory('<%= cat.category_id %>')"
              >
                <i class="bi bi-trash"></i>
              </button>
            </td>
                      </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- PAGINATION -->
    <nav class="d-flex justify-content-center mt-4">
      <ul class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPageNum === i ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&search=<%= search %>">
              <%= i %>
            </a>
          </li>
        <% } %>
      </ul>
    </nav>

  </div>
</div>

<script>
function searchCategory() {
  const value = document.getElementById('searchInput').value.trim();
  window.location.href = value
    ? `/admin/categories?search=${encodeURIComponent(value)}`
    : '/admin/categories';
}

function clearSearch() {
  window.location.href = '/admin/categories';
}

function toggleFeatured(id, featured) {
  fetch(`/admin/categories/${id}/featured`, {
    method: 'PATCH',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ featured })
  });
}

function deleteCategory(id) {
  Swal.fire({
    title: 'Delete category?',
    text: 'This will remove the category permanently',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#d33'
  }).then(result => {
    if (result.isConfirmed) {
      fetch(`/admin/categories/${id}`, { method: 'DELETE' })
        .then(() => location.reload());
    }
  });
}
</script>

</body>
</html>
