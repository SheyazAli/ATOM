<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Return Requests | Admin</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <style>
    body {
      background: #f2e5e2;
      font-family: "Inter", sans-serif;
    }

    .content {
      margin-left: 250px;
      padding: 40px;
    }

    .return-card {
      background: #fff;
      border-radius: 18px;
      padding: 28px;
      margin-bottom: 24px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.08);
    }

    .meta {
      font-size: 13px;
      color: #6b7280;
    }

    .label {
      font-size: 13px;
      font-weight: 600;
      color: #374151;
    }

    .value {
      font-size: 14px;
      color: #111827;
    }
  </style>
</head>

<body>

<%- include('./adminPartials/adminSidebar') %>

<div class="content">
  <h3 class="mb-4">Pending Return Requests</h3>

  <% if (!returnRequests || returnRequests.length === 0) { %>
    <p class="text-muted">No pending return requests.</p>
  <% } else { %>

    <% returnRequests.forEach(r => { %>
      <div class="return-card">

        <!-- HEADER -->
        <div class="d-flex justify-content-between mb-3">
          <div>
            <h5 class="mb-1">Order #<%= r.orderNumber %></h5>
            <div class="meta">
              Ordered: <%= new Date(r.orderedAt).toDateString() %> |
              Delivered: <%= new Date(r.deliveredAt).toDateString() %>
            </div>
          </div>

          <div class="text-end">
            <div class="label">Customer</div>
            <div class="value">
              <%= r.user.first_name %> <%= r.user.last_name %>
            </div>
            <div class="meta"><%= r.user.email %></div>
          </div>
        </div>

        <hr>

        <!-- PRODUCT DETAILS -->
        <div class="row g-3">
          <div class="col-md-4">
            <div class="label">Product</div>
            <div class="value"><%= r.item.name %></div>
          </div>

          <div class="col-md-2">
            <div class="label">Size</div>
            <div class="value"><%= r.item.size %></div>
          </div>

          <div class="col-md-2">
            <div class="label">Price</div>
            <div class="value">â‚¹ <%= r.item.price %></div>
          </div>

          <div class="col-md-2">
            <div class="label">Ordered Qty</div>
            <div class="value"><%= r.item.orderedQty %></div>
          </div>

          <div class="col-md-2">
            <div class="label">Return Qty</div>
            <div class="value"><%= r.item.returnedQty %></div>
          </div>
        </div>

        <hr>

        <!-- RETURN INFO -->
        <div class="row">
          <div class="col-md-6">
            <div class="label">Return Requested On</div>
            <div class="value">
              <%= new Date(r.item.returnRequestedAt).toDateString() %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="label">Reason</div>
            <div class="value"><%= r.item.reason %></div>
          </div>
        </div>

        <hr>

        <!-- ACTIONS -->
        <div class="d-flex justify-content-end gap-2">
          <form action="/admin/returns/approve" method="POST">
            <input type="hidden" name="orderId" value="<%= r.orderId %>">
            <input type="hidden" name="variantId" value="<%= r.item.variantId %>">
            <button class="btn btn-success">
              Approve Return
            </button>
          </form>

          <button
            class="btn btn-danger"
            onclick="openRejectModal('<%= r.orderId %>', '<%= r.item.variantId %>')">
            Reject
          </button>
        </div>

      </div>
    <% }) %>

  <% } %>
</div>

<!-- REJECT MODAL -->
<div class="modal fade" id="rejectModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <form action="/admin/returns/reject" method="POST" class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Reject Return</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <input type="hidden" name="orderId" id="rejectOrderId">
        <input type="hidden" name="variantId" id="rejectVariantId">

        <label class="form-label">Message to user</label>
        <textarea name="message" class="form-control" rows="4" required></textarea>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger">Reject Return</button>
      </div>
    </form>
  </div>
</div>

<script>
function openRejectModal(orderId, variantId) {
  document.getElementById('rejectOrderId').value = orderId;
  document.getElementById('rejectVariantId').value = variantId;
  new bootstrap.Modal(document.getElementById('rejectModal')).show();
}
</script>

</body>
</html>
