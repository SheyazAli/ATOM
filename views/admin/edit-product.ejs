<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Product | ATOM</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background: #f6eeec;
      font-family: "Inter", sans-serif;
    }

    .content {
      margin-left: 250px;
      padding: 40px;
    }

    .card-box {
      background: #fff;
      border-radius: 14px;
      padding: 20px;
      margin-bottom: 20px;
    }

    .variant-row {
      background: #faf7f6;
      padding: 12px;
      border-radius: 10px;
      margin-bottom: 10px;
    }

    .add-variant {
      cursor: pointer;
      color: #e0553f;
      font-weight: 500;
    }

    .variant-images img {
      width: 45px;
      height: 45px;
      object-fit: cover;
      border-radius: 6px;
      margin-right: 6px;
    }

    .save-btn {
      background: #e0553f;
      color: white;
      border: none;
      padding: 10px;
      border-radius: 10px;
    }
  </style>
</head>
<body>

<!-- SIDEBAR -->
<%- include('./adminPartials/adminSidebar') %>

<div class="content">

  <h3 class="fw-bold mb-4">Edit Product</h3>

  <form
    action="/admin/products/<%= product.product_id %>?_method=PUT"
    method="POST"
    enctype="multipart/form-data"
  >

    <!-- BASIC INFO -->
    <div class="card-box">
      <h6 class="fw-semibold mb-3">Basic Information</h6>

      <div class="mb-3">
        <label class="form-label">Product Title</label>
        <input
          type="text"
          name="title"
          class="form-control"
          value="<%= product.title %>"
          required
        >
      </div>

      <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea
          name="description"
          class="form-control"
        ><%= product.description %></textarea>
      </div>

      <div class="mb-3">
        <label class="form-label">Category</label>
        <select name="category_id" class="form-select" required>
          <% categories.forEach(cat => { %>
            <option
              value="<%= cat.category_id %>"
              <%= cat.category_id === product.category_id ? 'selected' : '' %>
            >
              <%= cat.name %>
            </option>
          <% }) %>
        </select>
      </div>
    </div>

    <!-- PRICING -->
    <div class="card-box">
      <h6 class="fw-semibold mb-3">Pricing</h6>
      <div class="row">
        <div class="col-md-6">
          <label>Regular Price</label>
          <input
            type="number"
            name="regular_price"
            class="form-control"
            value="<%= product.regular_price %>"
            required
          >
        </div>
        <div class="col-md-6">
          <label>Sale Price</label>
          <input
            type="number"
            name="sale_price"
            class="form-control"
            value="<%= product.sale_price || '' %>"
          >
        </div>
      </div>
    </div>

    <!-- VARIANTS -->
    <div class="card-box">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h6 class="fw-semibold mb-0">Variants</h6>
        <span class="add-variant" onclick="addVariant()">
          <i class="bi bi-plus-circle"></i> Add more
        </span>
      </div>

      <div id="variantContainer">

        <% variants.forEach((variant, index) => { %>
          <div class="row g-2 variant-row">

            <div class="col-md-2">
              <select name="variants[<%= index %>][size]" class="form-select">
                <option <%= variant.size === 'Small' ? 'selected' : '' %>>Small</option>
                <option <%= variant.size === 'Medium' ? 'selected' : '' %>>Medium</option>
                <option <%= variant.size === 'Large' ? 'selected' : '' %>>Large</option>
              </select>
            </div>

            <div class="col-md-2">
              <select name="variants[<%= index %>][color]" class="form-select">
                <option <%= variant.color === 'Black' ? 'selected' : '' %>>Black</option>
                <option <%= variant.color === 'White' ? 'selected' : '' %>>White</option>
                <option <%= variant.color === 'Red' ? 'selected' : '' %>>Red</option>
              </select>
            </div>

            <div class="col-md-2">
              <input
                type="number"
                name="variants[<%= index %>][stock]"
                class="form-control"
                value="<%= variant.stock %>"
                required
              >
            </div>

            <div class="col-md-3">
              <input
                type="text"
                name="variants[<%= index %>][sku]"
                class="form-control"
                value="<%= variant.sku %>"
                required
              >
            </div>

            <div class="col-md-3">
              <input
                type="file"
                name="variants[<%= index %>][images][]"
                class="form-control"
                multiple
              >

              <% if (variant.images && variant.images.length) { %>
                <div class="variant-images mt-2">
                  <% variant.images.forEach(img => { %>
                    <img src="/uploads/<%= img %>">
                  <% }) %>
                </div>
              <% } %>
            </div>

          </div>
        <% }) %>

      </div>
    </div>

    <!-- STATUS -->
    <div class="card-box">
      <div class="form-check mb-3">
        <input
          type="checkbox"
          name="status"
          class="form-check-input"
          <%= product.status ? 'checked' : '' %>
        >
        <label class="form-check-label">Set as Active</label>
      </div>

      <button type="submit" class="save-btn w-100">
        Update Product
      </button>
    </div>

  </form>
</div>

<script>
let variantIndex = <%= variants.length %>;

function addVariant() {
  const container = document.getElementById('variantContainer');

  const row = document.createElement('div');
  row.className = 'row g-2 variant-row';
  row.innerHTML = `
    <div class="col-md-2">
      <select name="variants[${variantIndex}][size]" class="form-select">
        <option>Small</option>
        <option>Medium</option>
        <option>Large</option>
      </select>
    </div>

    <div class="col-md-2">
      <select name="variants[${variantIndex}][color]" class="form-select">
        <option>Black</option>
        <option>White</option>
        <option>Red</option>
      </select>
    </div>

    <div class="col-md-2">
      <input type="number" name="variants[${variantIndex}][stock]" class="form-control" placeholder="Quantity" required>
    </div>

    <div class="col-md-3">
      <input type="text" name="variants[${variantIndex}][sku]" class="form-control" placeholder="SKU" required>
    </div>

    <div class="col-md-3">
      <input type="file" name="variants[${variantIndex}][images][]" class="form-control" multiple>
    </div>
  `;

  container.appendChild(row);
  variantIndex++;
}
</script>

</body>
</html>