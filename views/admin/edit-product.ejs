<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Product | ATOM</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Cropper -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.css" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js"></script>

  <!-- SweetAlert -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    body { background:#f6eeec; font-family:Inter,sans-serif; }
    .content { margin-left:250px; padding:40px; }
    .card-box { background:#fff; border-radius:14px; padding:20px; margin-bottom:20px; }
    .variant-row { background:#faf7f6; padding:15px; border-radius:10px; margin-bottom:15px; position:relative; }
    .remove-variant { position:absolute; top:10px; right:10px; color:#dc3545; cursor:pointer; }
    .save-btn { background:#e0553f; color:white; border:none; padding:12px; border-radius:10px; }
    .img-wrap { position:relative; }
    .img-remove {
      position:absolute; top:2px; right:6px;
      cursor:pointer; color:white;
      background:black; border-radius:50%;
      padding:0 6px;
    }
    #cropPreview { max-width:300px; display:none; margin-top:10px; }
  </style>
</head>

<body>

<%- include('./adminPartials/adminSidebar') %>

<div class="content">
  <h3 class="fw-bold mb-4">Edit Product</h3>

  <form id="productForm"
        action="/admin/products/<%= product.product_id %>?_method=PATCH"
        method="POST"
        enctype="multipart/form-data">

    <!-- BASIC INFO -->
    <div class="card-box">
      <input class="form-control mb-3" name="title" value="<%= product.title %>" required>
      <textarea class="form-control mb-3" name="description" required><%= product.description %></textarea>

      <select name="category_id" class="form-select" required>
        <% categories.forEach(c => { %>
          <option value="<%= c.category_id %>"
            <%= c.category_id === product.category_id ? 'selected' : '' %>>
            <%= c.name %>
          </option>
        <% }) %>
      </select>
    </div>

    <!-- THUMBNAIL -->
    <div class="card-box">
      <h6 class="fw-semibold mb-2">Thumbnail</h6>

      <img src="/uploads/<%= product.thumbnail %>"
           style="width:140px;border-radius:8px">

      <input type="file" id="thumbnailInput"
             name="thumbnail"
             class="form-control mt-2"
             accept="image/*">

      <img id="cropPreview">
    </div>

    <!-- PRICING -->
    <div class="card-box">
      <div class="row">
        <div class="col-md-6">
          <input class="form-control"
                 name="regular_price"
                 type="number"
                 value="<%= product.regular_price %>" required>
        </div>
        <div class="col-md-6">
          <input class="form-control"
                 name="sale_price"
                 type="number"
                 value="<%= product.sale_price %>">
        </div>
      </div>
    </div>

    <!-- VARIANTS -->
    <div class="card-box">
      <% variants.forEach((v,i) => { %>
        <div class="variant-row">

          <% if (i === 1) { %>
            <i class="bi bi-trash remove-variant"
               onclick="this.closest('.variant-row').remove()"></i>
          <% } %>

          <select class="form-select mb-2"
                  name="variants[<%= i %>][color]">
            <option selected><%= v.color %></option>
          </select>

          <!-- EXISTING IMAGES -->
          <div class="variant-preview d-flex gap-2 flex-wrap mt-2">
            <% v.images.forEach(img => { %>
              <div class="img-wrap">
                <img src="/uploads/<%= img %>" style="width:120px">
                <span class="img-remove"
                      onclick="this.parentElement.remove()">×</span>
                <input type="hidden"
                       name="variants[<%= i %>][existingImages][]"
                       value="<%= img %>">
              </div>
            <% }) %>
          </div>

          <!-- NEW IMAGES -->
          <input type="file"
                 class="form-control variant-images mt-2"
                 name="variants[<%= i %>][images]"
                 accept="image/*"
                 multiple>

          <small class="hint">Min 3, Max 5 images</small>

          <% Object.keys(v.sizes).forEach(size => { %>
            <div class="row g-2 mt-2">
              <div class="col-md-3">
                <input class="form-control" value="<%= size %>" disabled>
              </div>
              <div class="col-md-3">
                <input type="number"
                       class="form-control"
                       name="variants[<%= i %>][sizes][<%= size %>][stock]"
                       value="<%= v.sizes[size].stock %>"
                       min="0">
              </div>
            </div>
          <% }) %>

        </div>
      <% }) %>
    </div>

    <!-- STATUS -->
    <div class="card-box">
      <input type="checkbox" name="status"
             <%= product.status ? 'checked' : '' %>>
      Active
      <button class="save-btn w-100 mt-3">Update Product</button>
    </div>

  </form>
</div>

<script>
/* ================= ERROR DISPLAY ================= */
const params = new URLSearchParams(window.location.search);
if (params.get('error')) {
  Swal.fire('Error', params.get('error'), 'error');
}

/* ================= IMAGE CROPPING (SAME AS ADD PAGE) ================= */

const MIN_IMAGES = 3;
const MAX_IMAGES = 5;
const variantCrops = new Map();

/* Variant images */
document.addEventListener('change', e => {
  if (!e.target.classList.contains('variant-images')) return;

  const preview = e.target.previousElementSibling;
  if (!variantCrops.has(e.target)) variantCrops.set(e.target, []);

  [...e.target.files].forEach(file => {
    if (variantCrops.get(e.target).length >= MAX_IMAGES) return;

    const wrap = document.createElement('div');
    wrap.className = 'img-wrap';

    const img = document.createElement('img');
    img.style.width = '120px';
    wrap.appendChild(img);

    const btn = document.createElement('span');
    btn.className = 'img-remove';
    btn.innerHTML = '×';
    wrap.appendChild(btn);

    preview.appendChild(wrap);

    const reader = new FileReader();
    reader.onload = () => {
      img.src = reader.result;

      const cropper = new Cropper(img, {
        aspectRatio: 2 / 3,
        viewMode: 1,
        autoCropArea: 1
      });

      btn.onclick = () => {
        cropper.destroy();
        wrap.remove();
        variantCrops.set(
          e.target,
          variantCrops.get(e.target).filter(c => c !== cropper)
        );
      };

      variantCrops.get(e.target).push(cropper);
    };

    reader.readAsDataURL(file);
  });

  e.target.value = '';
});

/* Thumbnail crop */
let cropper;
const thumbInput = document.getElementById('thumbnailInput');
const preview = document.getElementById('cropPreview');

thumbInput.addEventListener('change', e => {
  const file = e.target.files[0];
  if (!file) return;

  const reader = new FileReader();
  reader.onload = () => {
    preview.src = reader.result;
    preview.style.display = 'block';

    if (cropper) cropper.destroy();
    cropper = new Cropper(preview, {
      aspectRatio: 1,
      viewMode: 1,
      autoCropArea: 1
    });
  };
  reader.readAsDataURL(file);
});

/* ================= FORM SUBMIT ================= */

document.getElementById('productForm').addEventListener('submit', async e => {
  e.preventDefault();

  for (const input of document.querySelectorAll('.variant-images')) {
    const croppers = variantCrops.get(input) || [];
    if (!croppers.length) continue;

    const dt = new DataTransfer();
    for (const cropper of croppers) {
      const canvas = cropper.getCroppedCanvas({ width:800, height:1200 });
      const blob = await new Promise(r => canvas.toBlob(r, 'image/webp', 0.9));
      dt.items.add(new File([blob], 'variant.webp', { type:'image/webp' }));
    }
    input.files = dt.files;
  }

  if (cropper) {
    const canvas = cropper.getCroppedCanvas({ width:600, height:600 });
    const blob = await new Promise(r => canvas.toBlob(r, 'image/webp', 0.9));
    const dt = new DataTransfer();
    dt.items.add(new File([blob], 'thumb.webp', { type:'image/webp' }));
    thumbInput.files = dt.files;
  }

  e.target.submit();
});
</script>

</body>
</html>
