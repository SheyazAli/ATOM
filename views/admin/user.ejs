<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management Panel</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body {
            background: #f2e5e2;
            font-family: "Inter", sans-serif;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            background: #ffffff;
            padding: 25px;
            border-right: 1px solid #e6e6e6;
            position: fixed;
            top: 0;
            left: 0;
        }

        .sidebar .logo {
            font-size: 26px;
            font-weight: 700;
            color: #6cb668;
        }

        .menu-item {
            padding: 12px 15px;
            border-radius: 8px;
            margin-bottom: 10px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 12px;
            color: #333;
            transition: .2s;
        }

        .menu-item:hover {
            background: #f0f4e9;
        }

        .menu-item.active {
            background: #eef3e3;
        }

        /* Main Content */
        .content {
            margin-left: 250px;
            padding: 40px;
        }

        .search-box {
            width: 70%;
            margin: 0 auto;
            background: #ded6d3;
            border-radius: 12px;
            padding: 10px 15px;
            border: none;
        }

        .table-card {
            width: 80%;
            margin: 30px auto;
            background: white;
            border-radius: 18px;
            padding: 25px 35px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .add-user-btn {
            background: #b1533b;
            padding: 10px 20px;
            border: none;
            color: white;
            border-radius: 8px;
        }
    </style>
</head>
<body>

<!-- SIDEBAR -->
<div class="sidebar">
    <div class="logo mb-2">ATOM</div>
    <small class="text-muted">Admin Panel</small>

    <div class="mt-4">
        <div class="menu-item"><i class="bi bi-box"></i> Products</div>
        <div class="menu-item"><i class="bi bi-cart"></i> Orders</div>
        <div class="menu-item"><i class="bi bi-folder"></i> Categories</div>
        <div class="menu-item"><i class="bi bi-bar-chart"></i> Inventory</div>
        <div class="menu-item active"><i class="bi bi-people"></i> Users</div>
        <div class="menu-item"><i class="bi bi-tag"></i> Coupons</div>
        <div class="menu-item"><i class="bi bi-graph-up-arrow"></i> Revenue</div>
    </div>

    <a href="/admin/logout" class="menu-item mt-4 logout-btn">
  <i class="bi bi-box-arrow-right"></i> Logout
</a>

</div>

<!-- MAIN CONTENT -->
<div class="content">

    <!-- Top Row: Title + Add Button -->
    <div class="d-flex justify-content-between align-items-center pe-5">
        <h2 class="fw-bold">User Management</h2>

        <button class="add-user-btn">
            <i class="bi bi-plus-lg"></i> Add User
        </button>
    </div>

    <!-- Search Bar -->
    <input type="text" class="form-control search-box mt-3" placeholder="ðŸ”  Search user...">

    <!-- User Table -->
    <div class="table-card">
        <table class="table table-borderless align-middle">
            <thead class="fw-semibold">
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>

            <tbody>
