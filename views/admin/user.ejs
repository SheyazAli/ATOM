<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Management Panel</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  <style>
    body {
      background: #f2e5e2;
      font-family: "Inter", sans-serif;
    }

    /* Content */
    .content {
      margin-left: 250px;
      padding: 40px;
    }

    .search-box {
      background: #ded6d3;
      border-radius: 12px;
      padding: 10px 15px;
      border: none;
    }

    .table-card {
      width: 80%;
      margin: 30px auto;
      background: white;
      border-radius: 18px;
      padding: 25px 35px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .add-user-btn {
      background: #b1533b;
      padding: 10px 20px;
      border: none;
      color: white;
      border-radius: 8px;
    }

    .status-badge {
      padding: 4px 10px;
      border-radius: 12px;
      font-size: 12px;
    }
  </style>
</head>
<body>

<!-- SIDEBAR -->
 <%- include('./adminPartials/adminSidebar') %>

<!-- MAIN CONTENT -->
<div class="content">

  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center pe-5">
    <h2 class="fw-bold">User Management</h2>
    <!-- <button class="add-user-btn">
      <i class="bi bi-plus-lg"></i> Add User
    </button> -->
  </div>

  <!-- Search -->
   <div class="d-flex gap-2 mt-4 justify-content-center">
  <input
    type="text"
    id="searchInput"
    class="form-control search-box w-50"
    placeholder="ðŸ” Search user..."
    value="<%= search %>"
  />

  <button class="btn btn-primary" onclick="searchUser()">
    Search
  </button>

  <button class="btn btn-secondary" onclick="clearSearch()">
    Clear
  </button>
</div>


  <!-- Table -->
  <div class="table-card">
    <table class="table table-borderless align-middle">
      <thead class="fw-semibold">
        <tr>
          <th>Username</th>
          <th>Email</th>
          <!--<th>Phone</th> -->
          <th>Status</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% if (users.length === 0) { %>
          <tr>
            <td colspan="5" class="text-center text-muted">No users found</td>
          </tr>
        <% } %>

        <% users.forEach(user => { %>
          <tr>
            <td><%= user.first_name %> <%= user.last_name %></td>
            <td><%= user.email %></td>
           <!-- <td><%= user.phone_number || '-' %></td> -->
            <td>
              <span class="status-badge <%= user.status === 'blocked' ? 'bg-danger text-white' : 'bg-success text-white' %>">
                <%= user.status %>
              </span>
            </td>
            <td class="text-center">
              <button
                class="btn btn-sm <%= user.status === 'blocked' ? 'btn-success' : 'btn-danger' %>"
                onclick="toggleStatus('<%= user._id %>', '<%= user.status %>')">
                <%= user.status === 'blocked' ? 'Unblock' : 'Block' %>
              </button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Pagination -->
    <nav class="d-flex justify-content-center mt-4">
      <ul class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage === i ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&search=<%= search %>">
              <%= i %>
            </a>
          </li>
        <% } %>
      </ul>
    </nav>

  </div>
</div>

<!-- Scripts -->
<script>
function toggleStatus(userId, status) {
  const action = status === 'blocked' ? 'Unblock' : 'Block';

  Swal.fire({
    title: `${action} User?`,
    text: `Are you sure you want to ${action.toLowerCase()} this user?`,
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: action === 'Block' ? '#d33' : '#28a745',
    cancelButtonColor: '#6c757d',
    confirmButtonText: `Yes, ${action}`
  }).then((result) => {
    if (result.isConfirmed) {
      fetch(`/admin/users/${userId}/toggle-status`, {
        method: 'PUT'
      })
      .then(res => res.json())
      .then(() => {
        Swal.fire({
          icon: 'success',
          title: `User ${action}ed`,
          timer: 1200,
          showConfirmButton: false
        }).then(() => location.reload());
      })
      .catch(() => {
        Swal.fire('Error', 'Something went wrong', 'error');
      });
    }
  });
}

function searchUser() {
  const value = document.getElementById('searchInput').value.trim();
  window.location.href = `/admin/user?search=${value}`;
}

function clearSearch() {
  window.location.href = `/admin/user`;
}
</script>

</body>
</html>
